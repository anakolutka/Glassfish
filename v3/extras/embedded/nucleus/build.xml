<project name="glassfish-embedded-jar" default="create.distribution">
    <property name="rootdir" value="target"/>
    <property name="zipdir" value="${rootdir}/packager_zips"/>
    <property name="jardir" value="${rootdir}/packager_jars"/>
    <property name="filedir" value="${rootdir}/packager_files"/>
    <property name="finaljar" value="${rootdir}/glassfish-embedded-nucleus.jar"/> 

    <target name="create.distribution">

        <!-- get jars if any -->
        <copy todir="${jardir}">
            <fileset dir="${zipdir}">
                <include name="*.jar"/>
            </fileset>
        </copy>

        <!-- The packager files are zips with jars inside -->
        <unzip dest="${jardir}">
            <fileset dir="${zipdir}">
                <include name="*.zip"/>
            </fileset>

            <!-- This does not work when called from maven.  Very annoying!
            <mapper type="flatten"/-->
        </unzip>

        <!-- There is probably a much better way to do this.  Feel free to improve
             the performance -->

        <echo message="Jarring DTDs so that the next step will 'see' them."/>
		<jar
			destfile="${jardir}/dtds.jar"
			basedir="${jardir}/glassfishv3/glassfish/lib"
			includes="dtds/*.dtd"
         />

        <echo message="rejarring and processing metadata..."/>
        <taskdef name="rejar" classname="org.jvnet.maven.plugin.antrun.RejarTask" />
         <rejar destfile="${finaljar}">
            <zipgroupfileset dir="${jardir}" includes="**/*.jar"/>
            <manifest>
                 <attribute name="Main-Class" value="com.sun.enterprise.glassfish.bootstrap.ASMain"/>
             </manifest>
        </rejar>

        <attachArtifact file="${finaljar}"/>

	<!--unjar ${final.jar} so that maven reactor has reference to target/classes -->
	<unjar src="${finaljar}" dest="${rootdir}/classes" />

   </target>
</project>




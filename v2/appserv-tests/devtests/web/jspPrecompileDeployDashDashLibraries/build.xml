<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE project [
<!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
<!ENTITY run SYSTEM "./../../../config/run.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
]>

<project name="webcontainer_unittest" default="all" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;
    &run;

    <target name="all" depends="setup,build,deploy,run,undeploy,stopDomain, restore"/>

    <target name="clean" depends="init-common">
        <antcall target="clean-common"/>
    </target>
       
    <target name="compile" depends="clean">
        <antcall target="compile-common">
            <param name="src" value="servlet"/>
        </antcall>
    </target>

    <target name="build" depends="compile">
        <property name="hasWebclient" value="yes"/> 
        <antcall target="webclient-war-common">
            <param name="hasWebclient" value="yes"/>
            <param name="webclient.war.classes" value="**/*.class"/> 
        </antcall>

        <javac srcdir="." classpath="${env.APS_HOME}/lib/reporter.jar"
               includes="WebTest.java"/>

    </target> 

    <target name="build-publish-war" depends="build, publish-war-common" />
    
    <target name="deploy" depends="init-common">
        <echo message="Deploying ${assemble.dir}/${appname}-web.war from ${basedir}."
              level="verbose"/>
        <exec executable="${ASADMIN}" failonerror="false">
            <arg line="deploy"/>
            <arg line="${as.props}"/>
            <arg line="--contextroot ${contextroot}"/>
            <arg line="--libraries myclasses.jar"/>
            <arg line="--upload=true"/>
            <arg line="--precompilejsp=${precompilejsp}"/>  
            <arg line="--target ${appserver.instance.name}"/>
            <arg line="${assemble.dir}/${appname}-web.war"/>
        </exec>
    </target>
    
    <target name="run" depends="init-common">
        <java classname="WebTest">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${contextroot}"/>
            <classpath>
                <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
                <pathelement location="."/>
            </classpath>
        </java>
    </target>
 
    <target name="undeploy" depends="init-common">
        <antcall target="undeploy-war-common"/>
    </target>   

    <target name="usage">
        <antcall target="usage-common"/>
    </target>

    <target name="setup" depends="init-common">
        <antcall target="copyJarToApplibs"/>
        <antcall target="restart-server-instance-common"/>
    </target>

    <target name="copyJarToApplibs" depends="init-common">
        <copy file="myclasses.jar"
            todir="${env.S1AS_HOME}/domains/${admin.domain}/lib/applibs"
            failonerror="true"/>
    </target>

    <target name="restore" depends="init-common">
        <antcall target="removeJarFromApplibs"/>
        <antcall target="startDomain"/>
    </target>

    <target name="removeJarFromApplibs" depends="init-common">
        <delete file="${env.S1AS_HOME}/domains/${admin.domain}/lib/applibs/myclasses.jar"/>
    </target>

</project>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" metadata-complete="true" version="3.1" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
  <module-name>ejb-ejb32-sfsb-descr-ejb</module-name>
  <enterprise-beans>
    <session>
      <display-name>SFSB</display-name>
      <ejb-name>SFSB</ejb-name>
      <business-remote>com.acme.Hello</business-remote>
      <ejb-class>com.acme.SFSB</ejb-class>
      <session-type>Stateful</session-type>
      <concurrency-management-type>Container</concurrency-management-type>
      <remove-method>
        <bean-method>
          <method-name>testRemove</method-name>
          <method-params/>
        </bean-method>
        <retain-if-exception>false</retain-if-exception>
      </remove-method>
      <transaction-type>Container</transaction-type>
      <persistence-context-ref>
        <persistence-context-ref-name>com.acme.SFSB/em</persistence-context-ref-name>
        <persistence-context-type>Transaction</persistence-context-type>
        <injection-target>
          <injection-target-class>com.acme.SFSB</injection-target-class>
          <injection-target-name>em</injection-target-name>
        </injection-target>
      </persistence-context-ref>
      <post-construct>
        <lifecycle-callback-class>com.acme.SFSB</lifecycle-callback-class>
        <lifecycle-callback-method>init</lifecycle-callback-method>
      </post-construct>
      <pre-destroy>
        <lifecycle-callback-class>com.acme.SFSB</lifecycle-callback-class>
        <lifecycle-callback-method>destroy</lifecycle-callback-method>
      </pre-destroy>
      <security-identity>
        <use-caller-identity/>
      </security-identity>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <description>RequiresNew</description>
      <method>
        <ejb-name>SFSB</ejb-name>
        <method-name>init</method-name>
        <method-params/>
      </method>
      <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
    <container-transaction>
      <description>RequiresNew</description>
      <method>
        <ejb-name>SFSB</ejb-name>
        <method-name>destroy</method-name>
        <method-params/>
      </method>
      <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>

<?xml version="1.0"?>
<project name="activation" basedir="." default="dist">

	<!-- create a distribution package -->
	<target name="dist">
		
		<!-- compile files -->
		<mkdir dir="temp" />
		<javac srcdir="src" debug="true" destdir="temp" source="1.5" target="1.5"/>

        <copy todir="temp/META-INF">
            <fileset dir="META-INF"/>
        </copy>
        
		<!-- creates binary jar -->
		<delete file="activation.jar"/>

        <jar jarfile="activation.jar" compress="false">
			<fileset dir="temp" />
			<fileset dir="src">
				<patternset>
					<include name="**/*.properties" />
					<include name="**/*.rxm"/>
					<include name="**/*.dtd"/>
					<include name="**/*.rng"/>
					<include name="**/*.mod"/>
				</patternset>
			</fileset>
		</jar>
		<delete dir="temp" />
	</target>
</project>

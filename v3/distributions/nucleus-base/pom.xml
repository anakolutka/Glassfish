<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.glassfish.distributions</groupId>
        <artifactId>distributions</artifactId>
        <version>10.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>nucleus-base</artifactId>
    <version>${nucleus.version}</version>
    <name>Glassfish Nucleus Base Bundle</name>
    <description>This pom describes how to assemble the Glassfish Nucleus Base Bundle</description>
    <packaging>distribution-base-zip</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
                <artifactId>maven-antrun-extended-plugin</artifactId>
                <version>1.11</version>
                <configuration>
                  <tasks>
                    <ant dir="." antfile="build.xml" target="create.bundle" />
                  </tasks>
                </configuration>
             </plugin>
        </plugins>
    </build>

</project>


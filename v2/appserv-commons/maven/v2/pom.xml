<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>bootstrap</artifactId>
        <groupId>com.sun.enterprise.glassfish</groupId>
        <version>10.0-SNAPSHOT</version>
        <relativePath>../bootstrap/pom.xml</relativePath>    
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sun.enterprise.glassfish</groupId>
    <artifactId>appserv-commons</artifactId>
    <packaging>jar</packaging>
    <version>${project.parent.version}</version>
    <name>Appserver Commons Classes</name>
    <description>Glassfish appserver common classes</description>
    
    <build>
        <sourceDirectory>../../src/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>dependency-maven-plugin</artifactId>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>netbeans</groupId>
                                    <artifactId>netbeans</artifactId>
                                    <version>5.5-dev-200604210200</version>
                                    <type>jar</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>jax20-api</groupId>
                                    <artifactId>jax20-api</artifactId>
                                    <version>wspack21-b20</version>
                                    <type>jar</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>jsr250-api</groupId>
                                    <artifactId>jsr250-api</artifactId>
                                    <version>1.0_promoted_fcs_b18</version>
                                    <type>jar</type>
                                </artifactItem>     
                               <artifactItem>
                                    <groupId>jax11-impl</groupId>
                                    <artifactId>jax11-impl</artifactId>
                                    <version>wspack21-b20</version>
                                    <type>jar</type>
                                </artifactItem>  
                               <artifactItem>
                                    <groupId>jax20-impl</groupId>
                                    <artifactId>jax20-impl</artifactId>
                                    <version>wspack21-b20</version>
                                    <type>jar</type>
                                </artifactItem>                                  
                               <artifactItem>
                                    <groupId>jax11-api</groupId>
                                    <artifactId>jax11-api</artifactId>
                                    <version>wspack21-b20</version>
                                    <type>jar</type>
                                </artifactItem>                                 
                            </artifactItems>                            
                            <outputDirectory>${project.build.directory}/dependencies</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>      
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.compiler.version}</source>
                    <target>${jdk.compiler.version}</target>
                    <compilerArguments>
                        <extdirs>
                            ${project.build.directory}/dependencies:${project.build.directory}/dependencies/modules
                        </extdirs>                        
                    </compilerArguments> 
                </configuration>
            </plugin>              
            <plugin>
                <groupId>com.sun.enterprise.build</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>   
                <inherited>false</inherited>        
                <executions>
                    <execution>
                        <id>package-rt</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${glassfish.home}/lib</outputDirectory>
                            <finalName>appserv-rt.jar</finalName>
                            <excludes>
                                <param>org/apache/tools/**</param>
                                <param>com/sun/enterprise/deployment/deploy/**</param>
                                <param>com/sun/enterprise/deployment/util/DeploymentProperties.class</param>
                                <param>com/sun/enterprise/deployment/util/DOLUtils.class</param>
                                <param>com/sun/enterprise/deployment/util/FileUploadUtil.class</param>
                                <param>com/sun/enterprise/deployment/util/XModuleType.class</param>
                                <param>com/sun/enterprise/util/i18n/StringManager.class</param>
                                <param>com/sun/enterprise/util/i18n/StringManagerBase.class</param>
                                <param>com/sun/enterprise/util/io/FileUtils.class</param>
                                <param>com/sun/enterprise/util/LocalStringManager.class</param>
                                <param>com/sun/enterprise/util/LocalStringManagerImpl.class</param>
                                <param>com/sun/enterprise/util/Print.class</param>
                                <param>com/sun/enterprise/util/shared/ArchivistUtils.class</param>
                                <param>com/sun/logging/LogDomains.class</param>
                                <param>com/sun/logging/enterprise/system/tools/deployment/LogStrings.properties</param>
                                <param>com/sun/logging/enterprise/system/util/LogStrings.properties</param>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-deployment-client</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${glassfish.home}/lib</outputDirectory>
                            <finalName>appserv-deployment-client.jar</finalName>
                            <includes>
                                <param>com/sun/enterprise/deployment/deploy/**</param>
                                <param>com/sun/enterprise/deployment/util/DeploymentProperties.class</param>
                                <param>com/sun/enterprise/deployment/util/DOLUtils.class</param>
                                <param>com/sun/enterprise/deployment/util/FileUploadUtil.class</param>
                                <param>com/sun/enterprise/deployment/util/XModuleType.class</param>
                                <param>com/sun/enterprise/util/i18n/StringManager.class</param>
                                <param>com/sun/enterprise/util/i18n/StringManagerBase.class</param>
                                <param>com/sun/enterprise/util/io/FileUtils.class</param>
                                <param>com/sun/enterprise/util/LocalStringManager.class</param>
                                <param>com/sun/enterprise/util/LocalStringManagerImpl.class</param>
                                <param>com/sun/enterprise/util/Print.class</param>
                                <param>com/sun/enterprise/util/shared/ArchivistUtils.class</param>
                                <param>com/sun/logging/LogDomains.class</param>
                                <param>com/sun/logging/enterprise/system/tools/deployment/LogStrings.properties</param>
                                <param>com/sun/logging/enterprise/system/util/LogStrings.properties</param>
                            </includes>
                        </configuration>
                    </execution>    
                    <execution>
                        <id>package-admin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${glassfish.home}/lib</outputDirectory>
                            <finalName>appserv-admin.jar</finalName>
                            <includes>
                                <param>com/sun/enterprise/util/OS.class</param>
                                <param>com/sun/enterprise/util/ASenvPropertyReader.class</param>
                                <param>com/sun/enterprise/util/StringUtils.class</param>
                                <param>com/sun/enterprise/util/io/FileUtils.class</param>
                                <param>com/sun/enterprise/util/ProcessExecutor.class</param>
                                <param>com/sun/enterprise/util/ExecException.class</param>
                                <param>com/sun/enterprise/util/FlusherThread.class</param>
                                <param>com/sun/appserv/server/util/Version.class</param>
                            </includes>
                        </configuration>
                    </execution>   
                    <execution>
                        <id>package-appserv-launch</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${glassfish.home}/lib</outputDirectory>
                            <finalName>appserv-launch.jar</finalName>
                            <includes>
                                <param>com/sun/enterprise/util/OS.class</param>
                                <param>com/sun/enterprise/util/ASenvPropertyReader.class</param>
                                <param>com/sun/enterprise/security/store/IdentityManager.class</param>
                                <param>com/sun/enterprise/util/net/NetUtils.class</param>
                                <param>com/sun/logging/LogDomains.class</param>
                            </includes>
                        </configuration>
                    </execution>                    
                </executions>
            </plugin>              
        </plugins>
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </resource>
        </resources>
    </build>
    <dependencies>
        <dependency>
            <groupId>javax.enterprise.deploy</groupId>
            <artifactId>deployment-api</artifactId>
            <version>${deployment-api.version}</version>
        </dependency>         
        <dependency>
            <groupId>javax.ejb</groupId>
            <artifactId>ejb-api</artifactId>
            <version>${ejb-api.version}</version>
        </dependency>        
        <dependency>
            <groupId>javax.persistence</groupId>
            <artifactId>persistence-api</artifactId>
            <version>${persistence-api.version}</version>
        </dependency>        
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>${servlet-api.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.jms</groupId>
            <artifactId>jms-api</artifactId>
            <version>${jms-api.version}</version>
        </dependency>        
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>mail</artifactId>
            <version>${mail.version}</version>
        </dependency>  
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>common-util</artifactId>
            <version>${project.parent.version}</version>
        </dependency>          
        <dependency>
            <groupId>javax.security</groupId>
            <artifactId>security-api</artifactId>
            <version>${security-api.version}</version>
        </dependency>          
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>annotation-framework</artifactId>
            <version>${pom.parent.version}</version>
        </dependency>        
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.6.5</version>
        </dependency>           
    </dependencies>
</project>

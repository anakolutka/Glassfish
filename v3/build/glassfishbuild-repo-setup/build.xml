<project name="IPS repository initial setup" default="default.target" basedir=".">
    
    <target name="default.target">
	    <mkdir dir="target/source"/>
	    <echo message="Populating IPS repository" />
    </target>

    <target name="copy.packages">

	    <resolveArtifact artifactId="mq-distribution" groupId="org.glassfish" type="zip" classifier="repo" property="mqrepo.zip"/>
   

        <unzip src="${mqrepo.zip}" dest="target/source">   
	</unzip>

	<echo message="Target repo dir is ${target.repo.dir}" />

	<!-- copy over MQ packages -->
	<exec dir="target/source" executable="python" failonerror="true">
		<arg line="${target.repo.dir}/pkg/bin/copypkgs.py -s . -d ${target.repo.dir} mq-core" />
	</exec>
        <exec dir="target/source" executable="python" failonerror="true">
		<arg line="${target.repo.dir}/pkg/bin/copypkgs.py -s . -d ${target.repo.dir} mq-server" />
	</exec>
	<exec dir="target/source" executable="python" failonerror="true">
		<arg line="${target.repo.dir}/pkg/bin/copypkgs.py -s . -d ${target.repo.dir} mq-config-gf" />
	</exec>
        <exec dir="target/source" executable="python" failonerror="true">
		<arg line="${target.repo.dir}/pkg/bin/copypkgs.py -s . -d ${target.repo.dir} mq-locale" />
	</exec>

    </target>
</project>


<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.glassfish</groupId>
        <artifactId>javaee-api</artifactId>
        <version>10.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.glassfish</groupId>
    <artifactId>javax.javaee</artifactId>
    <packaging>jar</packaging>
    <name>Java(TM) EE Specification APIs Repackaged as HK2 module and OSGi bundle</name>

    <properties>
        <bundle-version>10.0.0.SNAPSHOT</bundle-version>
        <require-bundle-property>bundle-version="[${bundle-version},${bundle-version}]"; resolution:="mandatory"; visibility:="reexport"
        </require-bundle-property>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>false</addDefaultImplementationEntries>
                            <!-- We don't need ClassPath to be generated as the classes are inlined
                                 until we figure out how to automatically export all exported classes
                                 of a required bundle.
                                 -->
                            <addClasspath>false</addClasspath>
                        </manifest>
                        <manifestEntries>
                            <!-- Standard Extension Entries -->
                            <Specification-Title>Java(TM) EE Specification API</Specification-Title>
                            <Specification-Version>5.0</Specification-Version>
                            <!-- Make it an HK2 module as well -->
                            <HK2-Export-Package>javax.</HK2-Export-Package>
                            <HK2-Bundle-Name>${project.groupId}:${project.artifactId}</HK2-Bundle-Name>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <!-- embed all compile and runtime scope dependencies -->
                        <Embed-Dependency>*;scope=compile;inline=true</Embed-Dependency>
                        <Export-Package>javax.*</Export-Package>
                    </instructions>
                    <!-- Maven uses the output directory (target/classes) 
                    rather than the final bundle, when compiling against 
                    projects in the same reactor (ie. the same build).
                    Since this jar is assembled out of multiple jars and 
                    we mark those dependencies as "optional," 
                    we need to unpack the classes.
                    -->
                    <unpackBundle>true</unpackBundle>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>

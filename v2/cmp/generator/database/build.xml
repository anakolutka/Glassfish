<project name="cmp/generator/database" default="jars" basedir=".">

  <!-- Ignore the environment's $CLASSPATH. -->
  <property name="build.sysclasspath" value="ignore"/>

  <property name="component.name" value="cmp"/>
  <property name="cmp.basedir" location="../.."/>

  <property file="${user.home}/build.properties"/>
  <property file="${cmp.basedir}/../bootstrap/project.properties"/>

  <property name="buildroot"  location="${cmp.basedir}/release/build"/>
  <property name="model_root" location="${cmp.basedir}/model"/>
  <property name="util_root"  location="${cmp.basedir}/utility"/>

  <property name="generator.database.path"  value="com/sun/jdo/spi/persistence/generator/database"/>

  <property name="generator.database.src"   location="libsrc/${generator.database.path}"/>
  <property name="generator.database.build" location="build/classes/${generator.database.path}"/>

  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${buildroot}/nbantext.jar"/>


  <!-- Main targets. -->

  <!-- This is the default target. -->
  <target name="jars" depends="compile,just-jars"/>

  <target name="clean">
    <delete dir="build"/>
    <delete dir="jars"/>
  </target>


  <!-- Internal targets. -->

  <target name="compile" depends="model.compile">
    <!-- Compile database generation library -->
    <echo message="Compiling persistence/generator/database library"/>
    <echo message="with Javac Flags Debug=${javac.debug} Optimize=${javac.optimize} Source=${javac.source}"/>

    <mkdir dir="build/classes"/>
    <javac srcdir="libsrc" destdir="build/classes" source="${javac.source}"
        deprecation="${javac.deprecation}"
        optimize="${javac.optimize}" debug="${javac.debug}"> 
      <classpath>
        <pathelement location="${dbschema.jar}"/>
        <pathelement location="${util_root}/build/classes"/>
        <pathelement location="${model_root}/build/classes"/>
      </classpath>
    </javac>
    <antcall target="copy-properties"/>
  </target>

  <!-- Create library jar persistence-generator-database.jar. -->
  <target name="just-jars">
    <echo message="Creating library jar persistence-generator-database.jar"/>

    <mkdir dir="jars"/>
    <locjar jarfile="jars/persistence-generator-database.jar" compress="false">
      <locale name="ja"/>
      <fileset dir="build/classes"/>
    </locjar>
  </target>

  <!-- Copy the property files. -->
  <target name="copy-properties">
    <copy todir="${generator.database.build}">
      <fileset dir="${generator.database.src}" includes="*.properties"/>
    </copy> 
  </target>

  <target name="model.compile">
    <ant dir="${model_root}" target="compile"/>
  </target>

</project>

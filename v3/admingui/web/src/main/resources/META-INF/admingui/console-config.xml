<?xml version="1.0" encoding="UTF-8"?>

<console-config id="web">
        <integration-point 
                id="web" 
                type="org.glassfish.admingui:navNode" 
                priority="300" 
                parentId="configuration" 
                content="webPluginTreeNode.jsf"
        />

        <!-- add the property sheet for deployment page, specific for web app -->
        <integration-point
                id="web_deploy"
                type="org.glassfish.admingui:uploadPropertySheet"
                priority="100"
                parentId="form"
                content="apps/deploymentWar.jsf"
        />

        <!-- add the dropdown option for selecting the type of app to deploy
             in the form of  label:value
         -->
        <integration-point
                id="web_deploy_type"
                type="org.glassfish.admingui:appTypeDropdown"
                priority="100"
                parentId="form"
                content="Web Application ;war"
        />


       
        <integration-point 
                id="monitor" 
                type="org.glassfish.admingui:navNode" 
                priority="350"
                parentId="configuration" 
                content="monitor/monitoringNode.jsf"
        />
        
        <!-- add the http ports to the Server General page -->
        <integration-point
                id="serverGeneral"
                type="org.glassfish.admingui:serverInstGeneralPe"
                priority="200"
                parentId=""
                content="serverPageNode.jsf"
        />
        
        <!-- Add a link under the Configuration Page  -->
        <integration-point 
                id="webConfigurationLink" 
                type="org.glassfish.admingui:configuration" 
                priority="400"
                parentId="propSheetSection"
                content="configuration/configurationLink.jsf"/>
                
        <!-- Add a Common Task under the 'Deployment' Task group -->
        <!--
        <integration-point 
                id="webAppDeployment" 
                type="org.glassfish.admingui:commonTask" 
                priority="100"
                parentId="deployment"
                content="webApp/webAppDeploymentTask.jsf"/>
        -->
                
        <!-- Add view monitoring data under the 'Monitoring' Task group 
        <integration-point 
                id="webViewMonitor" 
                type="org.glassfish.admingui:commonTask" 
                priority="100"
                parentId="monitoring"
                content="monitor/webViewMonitoringDataTask.jsf"/>-->
                
        <!-- Adding Tabs to the Server Instance General page -->        
        <integration-point
                id="monitoring" 
                type="org.glassfish.admingui:serverInstTab" 
                priority="20" 
                parentId="serverInstTabs" 
                content="monitor/monitoringTab.jsf" />
        <integration-point
                id="monitor_appstats" 
                type="org.glassfish.admingui:serverInstTab" 
                priority="20" 
                parentId="monitoring" 
                content="monitor/monitoringAppStatsTab.jsf" />
        <integration-point
                id="monitor_server" 
                type="org.glassfish.admingui:serverInstTab" 
                priority="30" 
                parentId="monitoring" 
                content="monitor/monitoringServerTab.jsf" />

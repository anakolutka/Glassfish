  <build>
    <plugins>
      <!-- assembly plugin isn't flexible enough
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptor>assembly.xml</descriptor>
            </configuration>
          </execution>
        </executions>
      </plugin-->
      <plugin>
        <groupId>com.sun.enterprise.glassfish</groupId>
        <artifactId>maven-glassfish-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>assemble</goal>
            </goals>
            <!--configuration>
              <descriptor>assembly.xml</descriptor>
            </configuration-->
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  

<!-- jdbc/jdbcConnectionPoolNew2.jsf -->
<!-- TODO: Add validation to number field
           Add javascript to control Table Name by Validation Method.
           control Isolation Level by Transaction Isolation.
           Add Properties table
               setUIComponentAttribute(id="form2:sheet:generalSheet:dsProp:datasource", property="required", value="#{sessionScope.noValidation}");

 -->

<!initPage
    setComponentRequired(id="form2:sheet:generalSheet:dsProp:datasource" required="$requestParameter{form2:validate}" )
/>

<sun:page id="page1">
    <event>
        <!beforeEncode
            getUIComponent(clientId="$pageSession{tableTextField}" component=>$attribute{tableTextField});
            setDisableConnectionPoolTableField(tableField="$attribute{tableTextField}" methodValue="#{wizardPool.ConnectionValidationMethod}");
        />
    </event>
    <!beforeCreate
    setResourceBundle(key="i18n" bundle="org.glassfish.admingui.core.Strings")
    setResourceBundle(key="i18njdbc" bundle="org.glassfish.jdbc.admingui.Strings")
    setResourceBundle(key="help" bundle="org.glassfish.admingui.core.Helplinks")
    getRequestValue(key="cancelPage" default="jdbc/jdbcConnectionPools.jsf" value=>$page{cancelPage});
    setSessionAttribute(key="noValidation" value="#{null}")
    getTableList(Properties="#{wizardPoolProperties}", TableList=>$attribute{tableList})
    />

#include "/shared/restart.inc"
    <sun:html id="html2">
        <sun:head id="propertyhead" title="$resource{i18njdbc.jdbcConnectionPool.Step2PageTitle}" parseOnLoad="false">
            <sun:script url="/resource/js/adminjsf.js" />
        </sun:head>

        <sun:body id="body3" onLoad="javascript: synchronizeRestartRequired('#{requestScope.restartRequired}', '#{sessionScope.restartRequired}')">
            <sun:form id="form2">
#include "/shared/treeBreadcrumbs.inc"
#include "/shared/alertMsg.inc"
            <sun:hidden id="validate"  value="TRUE" />
                <!-- Page Title -->
                <sun:title id="propertyContentPage" title="$resource{i18njdbc.jdbcConnectionPool.Step2PageTitle}"
                    helpText="$resource{i18njdbc.jdbcConnection.step2PageHelp}">
                    <!facet pageButtonsTop>
#include "jdbcConnectionPoolNew2Buttons.inc"
                    </facet>
                    </sun:title>
                    <!-- PropertySheet .... -->
                    <sun:propertySheet id="sheet" requiredFields="true">
                        <sun:propertySheetSection id="generalSheet" label="$resource{i18njdbc.jdbcPool.general}">
                            <sun:property id="jndiProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18n.common.Name}">
                                <sun:staticText id="Jndi" text="#{wizardPoolExtra.name}"/>
                            </sun:property>

                            <sun:property id="resTypeProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18n.common.resType}"  >
                                <sun:staticText id="resType" text="#{wizardPool.ResType}"  />
                            </sun:property>

                            <sun:property id="dbProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.dbVendor}"  >
                                <sun:staticText id="db" text="#{wizardPoolExtra.DBVendor}"  />
                            </sun:property>

                            <sun:property id="dsProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.datasource}" helpText="$resource{i18njdbc.jdbcPool.datasourceHelp}">
                                <sun:textField id="datasource" styleClass="required"  columns="$int{60}" text="#{wizardPoolExtra.DatasourceClassname}" required="#{true}" />
                            </sun:property>

                            <sun:property id="descProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18n.common.description}" >
                                <sun:textField id="desc" columns="$int{60}" text="#{wizardPoolExtra.Description}" />
                            </sun:property>
                            "<br /><br />
                        </sun:propertySheetSection>

			<!-- -------------------- Pool Settings ------------ -->
                        <sun:propertySheetSection id="poolSettingsPropertySheet" label="$resource{i18njdbc.jdbcPool.poolSettings}">
#include "poolPropertyNew.inc"
                            "<br /><br />
                        </sun:propertySheetSection>

			<!-- -------------------- Connection Validation ------------ -->

                        <sun:propertySheetSection id="connectionPropertySheet" label="$resource{i18njdbc.jdbcPool.Validation}">

                            <sun:property id="conValidationProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.conValidation}" helpText="$resource{i18njdbc.jdbcPool.conValidationHelp}">
                                <sun:checkbox label="$resource{i18n.common.Required}" selected="#{wizardPool.IsConnectionValidationRequired}" />
                           </sun:property>

                            <sun:property id="methodProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.valMethod}" >
                                <sun:dropDown id="valMethod" selected="#{wizardPool.ConnectionValidationMethod}"
                                    labels={"auto-commit" "meta-data"  "table"} onChange="javascript: disableTableField();">
                                    <!afterCreate
                                        getClientId(component="$this{component}" clientId=>$page{valMethod});
                                    />
                                </sun:dropDown>
                            </sun:property>

                            <sun:property id="tableProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.tableName}" helpText="$resource{i18njdbc.jdbcPool.tableNameHelp}">
                                <sun:textField id="tableTextField"  columns="$int{55}" text="#{wizardPool.ValidationTableName}" >
                                <!afterCreate
                                    getClientId(component="$this{component}" clientId=>$page{tableTextField});
                                />
                                </sun:textField>
                            </sun:property>

                            <sun:property id="failProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.failOnAny}" helpText="$resource{i18njdbc.jdbcPool.failOnAnyHelp}">
                                <sun:checkbox label="$resource{i18njdbc.jdbcPool.closeAll}" selected="#{wizardPool.FailAllConnections}" />
                           </sun:property>

                            <sun:property id="allowProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.allowCaller}" helpText="$resource{i18njdbc.jdbcPool.allowCallerHelp}">
                                <sun:checkbox label="$resource{i18n.common.Enabled}" selected="#{wizardPool.AllowNonComponentCallers}" />
                           </sun:property>


                          "<br /><br />
                        </sun:propertySheetSection>

			<!-- -------------------- Transaction Isolation ------------ -->

                        <sun:propertySheetSection id="transactionPropertySheet" label="$resource{i18njdbc.jdbcPool.transIsolationSection}">

                            <sun:property id="nonTransProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.nonTransConnection}" helpText="$resource{i18njdbc.jdbcPool.nonTransConnectionHelp}">
                                <sun:checkbox label="$resource{i18n.common.Enabled}" selected="#{wizardPool.NonTransactionalConnections}" />
                           </sun:property>

                            <sun:property id="transProp"  labelAlign="left" noWrap="#{true}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.transIsolation}" helpText="$resource{i18njdbc.jdbcPool.transIsolationHelp}" >
                                <sun:dropDown id="transIso" selected="#{wizardPool.TransactionIsolationLevel}" labels={"" "read-uncommitted" "read-committed" "repeatable-read" "serializable" } />
                            </sun:property>

                            <sun:property id="levelProp"  labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18njdbc.jdbcPool.isoLevel}" helpText="$resource{i18njdbc.jdbcPool.isoLevelHelp}">
                                <sun:checkbox label="$resource{i18njdbc.jdbcPool.Guaranteed}" selected="#{wizardPool.IsIsolationLevelGuaranteed}" />
                           </sun:property>
                           "<br /><br />
                        </sun:propertySheetSection>
                    </sun:propertySheet>
#include "/shared/propertyTable.inc"
                    <sun:title id="propertyContentPage2">
                    <!facet pageButtonsBottom>
#include "jdbcConnectionPoolNew2Buttons.inc"
                    </facet>
                    </sun:title>
	<sun:hidden id="helpKey" value="$resource{help.jdbcConnectionPoolNew2}" />
            </sun:form>
        </sun:body>
#include "/shared/changeButtonsJS.inc"

<f:verbatim>
    <script type="text/javascript">
    function disableTableField() {
        var methodType = document.getElementById("$pageSession{valMethod}");
        webui.suntheme.field.setDisabled("$pageSession{tableTextField}", methodType.getSelectedValue()  != 'table');
    }
    </script>
</f:verbatim>

    </sun:html>
</sun:page>



<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
      	  http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <enterprise-beans>
        <session>
            <ejb-name>Bean</ejb-name>
            <business-remote>com.sun.s1asdev.ejb31.timer.schedule_on_ejb_timeout.Stles</business-remote>
            <ejb-class>com.sun.s1asdev.ejb31.timer.schedule_on_ejb_timeout.StlesEJB</ejb-class>
            <session-type>Stateless</session-type>
            <timer>
                <schedule>
                    <second>*/5</second>
                    <minute>*</minute>
                    <hour>*</hour>
                </schedule>
                <timeout-method>
                    <method-name>ejbTimeout</method-name>
                    <method-params>
                        <method-param>java.ejb.Timer</method-param>
                    </method-params>
                </timeout-method>
                <info>Timer00</info>
            </timer>
        </session>
    </enterprise-beans>
</ejb-jar>

<project name="cmp/support/ejb" default="jars" basedir=".">

  <!-- Ignore the environment's $CLASSPATH. -->
  <property name="build.sysclasspath" value="ignore"/>

  <property name="component.name" value="cmp"/>
  <property name="cmp.basedir" location="../.."/>

  <property file="${user.home}/build.properties"/>
  <property file="${cmp.basedir}/../bootstrap/project.properties"/>

  <property name="buildroot"                location="${cmp.basedir}/release/build"/>
  <property name="enhancer_root"            location="${cmp.basedir}/enhancer"/>
  <property name="generator_database_root"  location="${cmp.basedir}/generator/database"/>
  <property name="mapping_ejb_root"         location="${cmp.basedir}/mapping/ejb"/>
  <property name="model_root"               location="${cmp.basedir}/model"/>
  <property name="support_sqlstore_root"    location="${cmp.basedir}/support/sqlstore"/>
  <property name="util_root"                location="${cmp.basedir}/utility"/>

  <property name="appserv-commons.jar.path"    location="${appserv-rt.jar}"/>
  <property name="appserv-core.jar.path"       location="${appserv-rt.jar}"/>
  <property name="ejb-api.jar.path"            location="${javaee.jar}"/>
  <property name="schema2beans.jar.path"       location="${appserv-admin.jar}"/>
  <property name="transaction-api.jar.path"    location="${appserv-rt.jar}"/>
  <property name="entity-persistence.jar.path" location="${entity-persistence.jar}"/>

  <property name="support.ejb.path"    value="com/sun/jdo/spi/persistence/support/ejb"/>

  <property name="support.ejb.src"     location="src/${support.ejb.path}"/>
  <property name="support.ejb.build"   location="build/classes/${support.ejb.path}"/>

  <property name="support.cmp.src"     location="${support.ejb.src}/cmp"/>
  <property name="support.cmp.build"   location="${support.ejb.build}/cmp"/>

  <property name="support.ejbc.src"    location="${support.ejb.src}/ejbc"/>
  <property name="support.ejbc.build"  location="${support.ejb.build}/ejbc"/>

  <property name="support.model.src"   location="${support.ejb.src}/model"/>
  <property name="support.model.build" location="${support.ejb.build}/model"/>

  <property name="ejbqlc.antlr.src"    location="${support.ejb.src}/ejbqlc"/>
  <property name="ejbqlc.antlr.build"  location="${support.ejb.build}/ejbqlc"/>

  <property name="ejbqlc.antlr.gensrc" location="build/gensrc/${support.ejb.path}/ejbqlc"/>

  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${buildroot}/nbantext.jar"/>


  <!-- Main targets. -->

  <!-- This is the default target. -->
  <target name="jars" depends="compile,just-jars"/>

  <target name="clean" depends="clean-antlr">
    <delete dir="build"/>
    <delete dir="jars"/>
  </target>


  <!-- Internal targets. -->

  <!-- Delete the files generated by ANTLR. -->
  <target name="clean-antlr">
    <delete>
      <fileset dir="${ejbqlc.antlr.src}">
        <include name="EJBQLLexer.java"/>
        <include name="EJBQLParser.java"/>
        <include name="EJBQLTokenTypes.java"/>
        <include name="EJBQLTokenTypes.txt"/>
        <include name="Semantic*.java"/>
        <include name="SemanticTokenTypes.txt"/>
        <include name="JDOQLCodeGeneration*.java"/>
        <include name="JDOQLCodeGenerationTokenTypes.txt"/>
      </fileset>
    </delete>
  </target>

  <target name="compile" depends="enhancer.compile,support.sqlstore.compile,mapping.ejb.compile,generate">
    <echo message="Compiling persistence/support/ejb library"/>
    <echo message="with Javac Flags Debug=${javac.debug} Optimize=${javac.optimize} Source=${javac.source}"/>

    <mkdir dir="build/classes"/>
    <javac destdir="build/classes" source="${javac.source}"
        deprecation="${javac.deprecation}"
        optimize="${javac.optimize}" debug="${javac.debug}">  
      <src path="src"/>
      <src path="build/gensrc"/>
      <classpath>
        <pathelement location="${appserv-commons.jar.path}"/>
        <pathelement location="${appserv-core.jar.path}"/>
        <pathelement location="${dbschema.jar}"/>
        <pathelement location="${ejb-api.jar.path}"/>
        <pathelement location="${enhancer_root}/build/classes"/>
        <pathelement location="${generator_database_root}/build/classes"/>
        <pathelement location="${mapping_ejb_root}/build/classes"/>
        <pathelement location="${model_root}/build/classes"/>
        <pathelement location="${schema2beans.jar.path}"/>
        <pathelement location="${support_sqlstore_root}/build/classes"/>
        <pathelement location="${transaction-api.jar.path}"/>
        <pathelement location="${util_root}/build/classes"/>
        <pathelement location="${entity-persistence.jar.path}"/>
      </classpath>
    </javac>
    <antcall target="copy-properties"/>
  </target>

  <!-- Create the jar files. -->
  <target name="just-jars">
    <echo message="Creating library jar persistence-support-ejb.jar"/>

    <mkdir dir="jars"/>
    <locjar jarfile="jars/persistence-support-ejb.jar" compress="false">
      <locale name="ja"/>
      <fileset dir="build/classes"/>
    </locjar>
  </target>

  <!-- Copy the property files. -->
  <target name="copy-properties">
    <copy todir="${support.cmp.build}">
      <fileset dir="${support.cmp.src}" includes="*.properties"/>
    </copy> 
    <copy todir="${support.ejbc.build}">
      <fileset dir="${support.ejbc.src}" includes="*.properties"/>
    </copy> 
    <copy todir="${support.model.build}">
      <fileset dir="${support.model.src}" includes="*.properties"/>
    </copy> 
    <copy todir="${ejbqlc.antlr.build}">
      <fileset dir="${ejbqlc.antlr.src}" includes="*.properties"/>
    </copy> 
  </target>

  <!-- Run ANTLR. -->
  <target name="generate">
    <mkdir dir="${ejbqlc.antlr.gensrc}"/>
    <java dir="${ejbqlc.antlr.src}" fork="true"
          classname="persistence.antlr.Tool">
           <arg value="-o"/>
           <arg path="${ejbqlc.antlr.gensrc}"/>
           <arg path="${ejbqlc.antlr.src}/EJBQL.g"/>
      <classpath path="${entity-persistence.jar.path}"/>
    </java>
    <java dir="${ejbqlc.antlr.src}" fork="true"
          classname="persistence.antlr.Tool">
           <arg value="-o"/>
           <arg path="${ejbqlc.antlr.gensrc}"/>
           <arg path="${ejbqlc.antlr.src}/Semantic.g"/>
      <classpath path="${entity-persistence.jar.path}"/>
    </java>
    <java dir="${ejbqlc.antlr.src}" fork="true"
          classname="persistence.antlr.Tool">
           <arg value="-o"/>
           <arg path="${ejbqlc.antlr.gensrc}"/>
           <arg path="${ejbqlc.antlr.src}/JDOQLCodeGeneration.g"/>
      <classpath path="${entity-persistence.jar.path}"/>
    </java>
  </target>

  <target name="enhancer.compile">
    <ant dir="${enhancer_root}" target="compile"/>
  </target>

  <target name="mapping.ejb.compile">
    <ant dir="${mapping_ejb_root}" target="compile"/>
  </target>

  <target name="support.sqlstore.compile">
    <ant dir="${support_sqlstore_root}" target="compile"/>
  </target>

</project>

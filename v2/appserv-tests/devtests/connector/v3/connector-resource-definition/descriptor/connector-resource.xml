<?xml version="1.0" encoding="UTF-8"?>
<connector-resource xmlns="http://java.sun.com/xml/ns/javaee" 
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/javaee_7.xsd>
	<description>global-scope resource defined in application DD</description>
	<name>java:global/env/Application_Level_ConnectorResource</name>
	<class-name>javax.resource.cci.ConnectionFactory</class-name>
	<resource-adapter-name>crd-ra</resource-adapter-name>
	<property>
		<name>transactionSupport</name>
		<value>LocalTransaction</value>
	</property>
</connector-resource>

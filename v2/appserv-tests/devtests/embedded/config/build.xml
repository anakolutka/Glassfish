<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project [
<!ENTITY commonSetup SYSTEM "./embedded-properties.xml">
<!ENTITY commonBuild SYSTEM "./embedded-common.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
]>
<project name="sample" >

    &commonSetup;
    &commonBuild;
    &testproperties;

   <target name="embedded" description="embedded tasks" depends="init-common">
        <glassfish-embedded-start/>
        <glassfish-embedded-admin command = "create-http-listener" >
                <CommandProperty name="defaultvs" value="server"/>
                <CommandProperty name="listenerport" value="8080"/>
                <CommandProperty name="listener_id" value="embedded-listener"/>
                <CommandProperty name="listeneraddress" value="0.0.0.0"/>
        </glassfish-embedded-admin>

        <glassfish-embedded-deploy file="/Users/Amy/tests/hello.war" force="false" name="hello" contextRoot="hello"/>

        <glassfish-embedded-stop />
    </target>
</project>

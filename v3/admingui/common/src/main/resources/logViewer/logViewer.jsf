                setAttribute(key="afterRecord" value="#{true}");                
                setAttribute(key="fromRecord" value="#{last}");
                navigate(page="/logViewer/logViewer.jsf");
            />
            </sun:button>            
         </sun:panelGroup>
     </facet>         

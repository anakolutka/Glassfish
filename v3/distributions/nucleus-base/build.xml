<project name="nucleus-base bundle creation" basedir=".">
    <target name="create.bundle">
        <!-- force resource processing as version could change behind the scene without Ant ever noticing it -->
	<delete dir="target/resources"/>
        <mkdir dir="target/resources"/>

        <resolveArtifact artifactId="jsp-impl" property="jsp.impl" />
        <basename file="${jsp.impl}" property="jsp.impl.base" />
        <resolveArtifact artifactId="el-impl" property="el.impl" />
        <basename file="${el.impl}" property="el.impl.base" />
        <resolveArtifact artifactId="jstl-impl" property="jstl.impl" />
        <basename file="${jstl.impl}" property="jstl.impl.base" />
        <resolveArtifact artifactId="jsf-impl" property="jsf.impl" />
        <basename file="${jsf.impl}" property="jsf.impl.base" />

        <copy todir="target/resources">
            <fileset dir=".">
                <include name="bin/*" />
            </fileset>
            <filterset>
              <filter token="VERSION" value="${version}"/>
              <filter token="JSP_IMPL" value="${jsp.impl.base}"/>
              <filter token="EL_IMPL" value="${el.impl.base}"/>
              <filter token="JSTL_IMPL" value="${jstl.impl.base}"/>
              <filter token="JSF_IMPL" value="${jsf.impl.base}"/>
            </filterset>
        </copy>
        <zip file="target/nucleus-base.zip">
            <zipfileset prefix="glassfish" dir="target/resources" filemode="755"
                    includes="bin/*"
                    excludes="bin/*.bat" />
            <zipfileset prefix="glassfish" dir="target/resources">
                <include name="bin/*.bat" />
            </zipfileset>
            <zipfileset prefix="glassfish" dir=".">
                <include name="*.txt"/>
                <include name="config/**"/>
                <include name="lib/**"/>
                <include name="domains/**"/>
                <include name="COPYRIGHT"/>
            </zipfileset>
        </zip>
        <attachArtifact file="target/nucleus-base.zip"/>
    </target>
</project>

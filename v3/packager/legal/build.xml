<project name="legal fragment bundle creation" basedir=".">
    <target name="create.bundle">
        <!-- force resource processing as version could change behind the scene without Ant ever noticing it -->
	<delete dir="target/resources/glassfish/legal"/>
        <mkdir dir="target/resources/glassfish/legal"/>

        <copy todir="target/resources/glassfish/legal">
            <fileset dir=".">
                <include name="*LICENSE*.txt" />
            </fileset>
        </copy>
        <zip file="target/legal-fragment.zip">
            <zipfileset  dir="target/resources">
                <include name="glassfish/**"/>
            </zipfileset>
        </zip>
        <attachArtifact file="target/legal-fragment.zip"/>
    </target>
</project>

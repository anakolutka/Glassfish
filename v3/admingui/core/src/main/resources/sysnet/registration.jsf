                    <sun:property id="screenName" visible="#{false}"  style="margin-left: 17pt" labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18n.reg.screenName}" helpText="$resource{i18n.reg.screenNameHelp}" >                           

<project name="metro package creation" default="create.package" basedir=".">
       <import file="${basedir}/../common-targets.xml"/>

	<target name="create.package">
		<echo message="Staging files"/>
	
	<!-- this is temporary, scripts should be handled as
	maven artifacts -->

	<mkdir dir="target/stage/glassfishv3-prelude/glassfish/bin"/>

	<copy todir="target/stage/glassfishv3-prelude/glassfish/bin">
		<fileset dir="../../webservices/jsr109-impl/src/main/resources"
		    includes="ws*,xjc*,schemagen*"/>
	</copy>


	<chmod file="target/stage/glassfishv3-prelude/glassfish/bin/*" perm="ugo+rx"/>

	<!-- this is temporary, jar names to be resolved during their
	build	-->

	<move file="target/stage/glassfishv3-prelude/glassfish/modules/webservices-osgi.jar"
		tofile="target/stage/glassfishv3-prelude/glassfish/modules/webservices.jar"
		failonerror="false"/>
		
	<move file="target/stage/glassfishv3-prelude/glassfish/modules/jaxb-osgi.jar"
		tofile="target/stage/glassfishv3-prelude/glassfish/modules/jaxb.jar"
	       	failonerror="false"/>
	

        <if test="${compression}">
	       <antcall target="pack.compression" />
	</if>
           		   
       <zip file="target/metro.zip" basedir="target/stage">
       </zip>

       <attachArtifact file="target/metro.zip"/> 
   </target>
</project>


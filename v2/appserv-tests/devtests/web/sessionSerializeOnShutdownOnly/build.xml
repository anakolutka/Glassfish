<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE project [
        <!ENTITY commonSetup SYSTEM "../../../config/properties.xml">
        <!ENTITY commonBuild SYSTEM "../../../config/common.xml">
        <!ENTITY run SYSTEM "../../../config/run.xml">
        <!ENTITY testproperties SYSTEM "build.properties">
        ]>

<project name="session-serialize-on-shutdown-only" default="all" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;
    &run;

    <target name="all" depends="runfirst,restart,checkForSession,redeploy,checkForNoSession,undeploy"/>

    <target name="clean" depends="init-common">
        <delete dir="build" failonerror="false"/>
        <antcall target="clean-common"/>
    </target>

    <target name="compile" depends="clean">
        <antcall target="compile-common">
            <param name="src" value="servlet"/>
        </antcall>
    </target>

    <target name="build" depends="compile">
        <property name="hasWebclient" value="yes"/>
        <antcall target="webclient-war-common">
            <param name="hasWebclient" value="yes"/>
            <param name="webclient.war.classes" value="**/*.class"/>
        </antcall>

        <mkdir dir="build"/>
        <javac srcdir="." classpath="${env.APS_HOME}/lib/reporter.jar" includes="src/**/*.java"
               destdir="build" debug="true"/>

    </target>

    <target name="deploy" depends="init-common, build">
        <antcall target="deploy-war-common"/>
    </target>

    <target name="redeploy" depends="init-common">
        <echo message="Redeploying ${assemble.dir}/${appname}-web.war from ${basedir}."
              level="verbose"/>
        <exec executable="${ASADMIN}" failonerror="false">
            <arg line="redeploy"/>
            <arg line="${as.props}"/>
            <arg line="--name=${appname}-web"/>
            <arg line="${assemble.dir}/${appname}-web.war"/>
        </exec>
    </target>

    <target name="restart" depends="init-common">
        <echo message="Redeploying ${assemble.dir}/${appname}-web.war from ${basedir}."
              level="verbose"/>
        <exec executable="${ASADMIN}" failonerror="false">
            <arg line="stop-domain"/>
            <arg line="${as.props}"/>
        </exec>
        <exec executable="${ASADMIN}" failonerror="false">
            <arg line="start-domain"/>
            <arg line="${as.props}"/>
        </exec>
    </target>

    <target name="runfirst" depends="init-common, deploy">
        <java classname="test.WebTest">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${contextroot}"/>
            <arg value="first"/>
            <classpath>
                <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
                <pathelement location="build"/>
            </classpath>
        </java>
    </target>

    <target name="checkForNoSession" depends="init-common">
        <java classname="test.WebTest">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${contextroot}"/>
            <arg value="second"/>
            <arg value="false"/>
            <classpath>
                <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
                <pathelement location="build"/>
            </classpath>
        </java>
    </target>

    <target name="checkForSession" depends="init-common">
        <java classname="test.WebTest">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${contextroot}"/>
            <arg value="third"/>
            <arg value="true"/>
            <classpath>
                <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
                <pathelement location="build"/>
            </classpath>
        </java>
    </target>

    <target name="undeploy" depends="init-common">
        <antcall target="undeploy-war-common"/>
    </target>

    <target name="usage">
        <antcall target="usage-common"/>
    </target>

</project>

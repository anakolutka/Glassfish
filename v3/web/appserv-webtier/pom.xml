<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
		<groupId>org.glassfish.web</groupId>
    	<artifactId>web</artifactId>
        <version>10.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>webtier</artifactId>
    <packaging>hk2-jar</packaging>
    <name>Web Container</name>

    <developers>
        <developer>
            <id>jluehe</id>
            <name>Jan Luehe</name>
            <url>http://blogs.sun.com/jluehe</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>lead</role>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>jfarcand</id>
            <name>Jean Francois Arcand</name>
            <url>http://weblogs.java.net/blog/jfarcand/</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>    
    <build>
        <plugins>
            <plugin>
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Module-Import-Policy>com.sun.enterprise.web.WebImportPolicy</Module-Import-Policy>
                        </manifestEntries>
                     </archive>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
    <dependencies>
        <dependency>
            <groupId>javax.javaee</groupId>
            <artifactId>javaee</artifactId>
            <version>${javaee-api.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>war-util</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.admin</groupId>
            <artifactId>admin-util</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.common</groupId>
            <artifactId>common-util</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <!--
              since our minimum requirement is still JDK5,
              we need this dependency. When we we switch
              to minimum JDK6 (which we do at some point toward EE6),
              we can remove this.
            -->
            <groupId>org.glassfish.external</groupId>
            <artifactId>ant</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>pwc</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>logging-api</artifactId>
            <version>${com.sun.commons.logging.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>modeler</artifactId>
            <version>${com.sun.commons.modeler.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>digester</artifactId>
            <version>${com.sun.commons.digester.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>beanutils</artifactId>
            <version>${com.sun.commons.beanutils.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>collections</artifactId>
            <version>${com.sun.commons.collections.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.external</groupId>
            <artifactId>grizzly-module</artifactId>
            <version>${grizzly.version}</version>
        </dependency>
        <dependency>
            <groupId>jasper-jsr199</groupId>
            <artifactId>jasper-jsr199</artifactId>
            <version>${jasper-jsr199.version}</version>
        </dependency>
    </dependencies>
</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.sun.enterprise.glassfish</groupId>
        <artifactId>bootstrap</artifactId>
        <version>10.0-SNAPSHOT</version>
        <relativePath>../bootstrap/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>grizzly</artifactId>
    <packaging>hk2-jar</packaging>
    <version>${grizzly.version}</version>
    <name>Grizzly Http Connector</name>
    <description>Project GlassFish HTTP Connector</description>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/share</directory>
                <includes>
                    <include>**/LocalStrings.properties</include>
                </includes>
            </resource>
        </resources>
    </build>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>${servlet-api.version}</version>
       </dependency>
        <dependency>
            <groupId>jasper-jsr199</groupId>
            <artifactId>jasper-jsr199</artifactId>
            <version>${jasper-jsr199.version}</version>
       </dependency>
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <version>${ant.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
            <version>${jsp-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>webtier</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>modeler</artifactId>
            <version>${com.sun.commons.modeler.version}</version>
        </dependency>
    </dependencies>
</project>

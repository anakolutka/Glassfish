<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="serviceRequirements" type="serviceRequirements"/>

    <xs:complexType name="activeMQServiceRequirement">
        <xs:complexContent>
            <xs:extension base="jmsServiceRequirement">
                <xs:sequence>
                    <xs:element name="clusterSize" type="xs:int"/>
                    <xs:element name="persistenceAdapter" type="xs:string" minOccurs="0"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="jmsServiceRequirement" abstract="true">
        <xs:sequence>
            <xs:element name="machineRequirement" type="machineRequirement" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="machineRequirement">
        <xs:sequence>
            <xs:element name="architecture" type="xs:string" minOccurs="0"/>
            <xs:element name="os" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="databaseServiceRequirement" abstract="true">
        <xs:sequence>
            <xs:element name="machineRequirement" type="machineRequirement" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="glassFishServiceRequirement">
        <xs:complexContent>
            <xs:extension base="javaEEServiceRequirement">
                <xs:sequence>
                    <xs:element name="clusterName" type="xs:string" minOccurs="0"/>
                    <xs:element name="clusterSize" type="xs:int"/>
                    <xs:element name="securityManagerEnabled" type="xs:boolean" default="false"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="javaEEServiceRequirement" abstract="true">
        <xs:sequence>
            <xs:element name="machineRequirement" type="machineRequirement" minOccurs="0"/>
            <xs:element name="profile" type="xs:string" default="full" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="javaDBServiceRequirement">
        <xs:complexContent>
            <xs:extension base="databaseServiceRequirement">
                <xs:sequence/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="mySQLServiceRequirement">
        <xs:complexContent>
            <xs:extension base="databaseServiceRequirement">
                <xs:sequence>
                    <xs:element name="diskless" type="xs:boolean"/>
                    <xs:element name="numberOfNodes" type="xs:int"/>
                    <xs:element name="sqlEngine" type="xs:string" minOccurs="0"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="openMQServiceRequirement">
        <xs:complexContent>
            <xs:extension base="jmsServiceRequirement">
                <xs:sequence>
                    <xs:element name="clusterSize" type="xs:int"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="serviceRequirements">
        <xs:sequence>
            <xs:choice minOccurs="0">
                <xs:element name="mysql" type="mySQLServiceRequirement"/>
                <xs:element name="javadb" type="javaDBServiceRequirement"/>
            </xs:choice>
            <xs:choice minOccurs="0">
                <xs:element name="glassfish" type="glassFishServiceRequirement"/>
                <xs:element name="weblogic" type="webLogicServiceRequirement"/>
            </xs:choice>
            <xs:choice minOccurs="0">
                <xs:element name="openmq" type="openMQServiceRequirement"/>
                <xs:element name="activemq" type="activeMQServiceRequirement"/>
            </xs:choice>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="webLogicServiceRequirement">
        <xs:complexContent>
            <xs:extension base="javaEEServiceRequirement">
                <xs:sequence>
                    <xs:element name="clusterName" type="xs:string" minOccurs="0"/>
                    <xs:element name="clusterSize" type="xs:int"/>
                    <xs:element name="productionMode" type="xs:boolean"/>
                    <xs:element name="securityManagerEnabled" type="xs:boolean"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>


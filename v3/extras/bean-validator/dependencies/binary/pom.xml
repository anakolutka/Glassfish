<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.glassfish.extras</groupId>
  <artifactId>gf-beans-validation-binary-dependencies</artifactId>
  <version>3.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Miscellaneous Binary Dependencies that have not yet been converted to source dependencies</name>

    <build>
      <defaultGoal>install</defaultGoal>

      <plugins>
          <plugin>
              <artifactId>maven-antrun-plugin</artifactId>
              <executions>

                  <execution>
                      <id>postconditions</id>
                      <phase>initialize</phase>
                      <configuration>
                          <tasks>
                              <echo message="Exploding binary dependencies"/>
                              <mkdir dir="target/classes" />
                              <unjar src="lib/bean-validator-binary-dependencies.jar" dest="target/classes" />

                              <echo message="Copying jms1.1 to local repo"/>
                              <mkdir dir="${settings.localRepository}/javax/jms/jms/1.1" />
                              <copy file="${settings.localRepository}/org/glassfish/javax.jms/3.0-SNAPSHOT/javax.jms-3.0-SNAPSHOT.jar"
                                    tofile="${settings.localRepository}/javax/jms/jms/1.1/jms-1.1.jar" />
                              
                              <echo message="Copying jmxtools-1.2.1 to local repo"/>
                              <mkdir dir="${settings.localRepository}/com/sun/jdmk/jmxtools/1.2.1" />
                              <copy file="lib/jmxtools.jar"
                                    tofile="${settings.localRepository}/com/sun/jdmk/jmxtools/1.2.1/jmxtools-1.2.1.jar" />
                              
                              <echo message="Copying jmxri-1.2.1 to local repo"/>
                              <mkdir dir="${settings.localRepository}/com/sun/jmx/jmxri/1.2.1" />
                              <copy file="lib/jmxri.jar"
                                    tofile="${settings.localRepository}/com/sun/jmx/jmxri/1.2.1/jmxri-1.2.1.jar" />

                          </tasks>
                      </configuration>
                      <goals>
                          <goal>run</goal>
                      </goals>
                  </execution>

                  <execution>
                      <id>rename-jars</id>
                      <phase>verify</phase>
                      <configuration>
                          <tasks>
                              <echo message="Renaming jars to be consistent with what JSR-303 expects"/>
                              <echo message="Copying javax/persistence/jpa-api/2.0.Beta1-SNAPSHOT/jpa-api-2.0.Beta1-SNAPSHOT.jar in local repo"/>
                              <mkdir dir="${settings.localRepository}/org/hibernate/java-persistence/jpa-api/2.0.Beta1" />
                              <copy overwrite="true" file="${settings.localRepository}/javax/persistence/jpa-api/2.0.Beta1-SNAPSHOT/jpa-api-2.0.Beta1-SNAPSHOT.jar"
                                    tofile="${settings.localRepository}/org/hibernate/java-persistence/jpa-api/2.0.Beta1/jpa-api-2.0.Beta1.jar"
                                     /> 

                          </tasks>
                      </configuration>
                      <goals>
                          <goal>run</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>

      </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.googlecode.jtype</groupId>
            <artifactId>jtype</artifactId>
            <version>0.1.0</version>
        </dependency>

        <dependency>
            <groupId>javax.persistence</groupId>
            <artifactId>jpa-api</artifactId>
            <version>2.0.Beta1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>jtype</id>
            <name>JType Maven Repository</name>
            <url>http://jtype.googlecode.com/svn/repository/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>jboss-jpa-api</id>
            <name>JBoss Maven Repository</name>
            <url>http://snapshots.jboss.org/maven2/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>    

</project>

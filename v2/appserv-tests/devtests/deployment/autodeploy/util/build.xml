<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE project [
<!ENTITY commonBuild SYSTEM "file:../../config/common.xml">
<!ENTITY autodeployUtil SYSTEM "file:util.xml">
]>

<project name="autodeploy-util" default="all" basedir=".">
	&commonBuild;
        &autodeployUtil;

    <target name="prepare" depends="init">
        <mkdir dir="${build}" />
    </target>
	
    <target name="build" depends="compile">
        
    </target>
    
    <target name="compile" depends="prepare">
        <javac srcdir="."
               destdir="${build}"
               debug="on"
               failonerror="true">
            <classpath refid="autodeploy.compile.classpath"/>
        </javac>
    </target>

    <target name="private-all" depends="build">
        <echo>Autodeploy util common tools are ready</echo>
    </target>
    
</project>

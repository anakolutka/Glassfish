            subject="Test results for WebContainer dev tests"
            mailhost="ha21sca-mail1.sfbay.sun.com"
            message="Quick Look test results...">                

        <fileset dir="${env.APS_HOME}"  
                includes="count.txt,test_results.html"/>
        </mail>
    </target>
</project>

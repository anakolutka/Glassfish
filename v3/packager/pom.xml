<!--
  modules used to build glassfish packages
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.glassfish</groupId>
        <artifactId>glassfish-parent</artifactId>
        <version>10.0-SNAPSHOT</version>
    </parent>

    <packaging>pom</packaging>
    <groupId>org.glassfish.packager</groupId>
    <artifactId>packages</artifactId>
    <name>Glassfish packages</name>

    <modules>
	<module>felix</module>
	<module>pkg-java</module> 
	<module>glassfish-hk2</module>
	<module>glassfish-grizzly</module>
	<module>glassfish-api</module>
	<module>glassfish-nucleus</module>
	<module>glassfish-common</module>
	<module>glassfish-registration</module>
	<module>glassfish-management</module>
	<module>glassfish-amx</module>
	<module>glassfish-jca</module>
	<module>glassfish-jpa</module>
	<module>glassfish-jta</module>
	<module>glassfish-jsf</module>
	<module>glassfish-web-management</module>
	<module>glassfish-web</module>
	<module>glassfish-jdbc-management</module>
	<module>glassfish-jdbc</module>
	<module>glassfish-gui</module>
	<module>glassfish-web-gui</module>
	<module>glassfish-jdbc-gui</module>
	<module>glassfish-ejb</module>
	<module>glassfish-scripting</module>
	<module>glassfish-corba-omgapi</module>	
	<module>glassfish-jts</module>	
	<module>javadb</module>	
    </modules>


    <profiles>
        <profile>
            <!--
                Activate this profile with "mvn -Drepo.url=<ips-repository> -Dpython=<python> -P ips"
             -->
            <id>ips</id>
	    <activation>
	     <activeByDefault>false</activeByDefault>  
	    </activation>
            <properties>
                <!-- if profile is ips then set property to do pack200 compression -->
                <do.compression>true</do.compression>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
                        <artifactId>maven-antrun-extended-plugin</artifactId>
                    <!-- start of ant execution -->
	                <executions>
		            <execution>
		                <phase>package</phase>
         			<configuration>
		                    <tasks>
				        <filter token="BUILD_ID" value="${build.id}"/>
					    <copy file="pkg_conf.py.template" tofile="pkg_conf.py" 
					          filtering="true" failonerror="false"/>
	      		            </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
	                        </goals>
	                    </execution>
		        </executions>    
                    </plugin> 
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>	
                </plugins>
            </build>
        </profile>
    </profiles>        
</project>


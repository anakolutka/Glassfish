<project name="javadb package creation" default="create.package" basedir=".">
   <target name="create.package">
	   <mkdir dir="target/stage/glassfishv3-prelude"/>

	<resolveArtifact artifactId="javadb" groupId="org.glassfish.external" property="javadb.zip"/>
   

        <unzip src="${javadb.zip}"
           dest="target/stage/glassfishv3-prelude">
          <patternset>
		  <exclude name="META-INF/**"/>
	  </patternset>
       </unzip>

   
       <copy todir="target/stage/glassfishv3-prelude/javadb">
            <fileset dir="target/stage/glassfishv3-prelude/glassfish/javadb"/>
  	</copy>
	       
       <!-- Changing file permissions of javadb scripts -->
       <chmod file="target/stage/glassfishv3-prelude/javadb/frameworks/NetworkServer/bin/*" perm="ugo+rx"/>
       <chmod file="target/stage/glassfishv3-prelude/javadb/frameworks/embedded/bin/*" perm="ugo+rx"/>
       <delete dir="target/stage/glassfishv3-prelude/glassfish"/>

       <zip file="target/javadb.zip" basedir="target/stage"/>
           
       <attachArtifact file="target/javadb.zip"/>
   </target>
</project>


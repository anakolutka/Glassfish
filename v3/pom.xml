        <glassfish-jruby.version>RELEASE</glassfish-jruby.version>
		<dataprovider.version>4.2</dataprovider.version>
		<jsftemplating.version>1.2.1</jsftemplating.version>
    	<glassfish-api.version>10.0.406</glassfish-api.version>        
    </properties>
    <modules>
      	<module>build</module>
        <!-- Don't include javaee-api until we have resolved build issues
             associated with it. Currently, I have no idea as to why
             bnd fails when javaee-api/javax.javaee is built from
             top level. By Sahoo.
        <module>javaee-api</module>
        -->
      	<module>common</module>
      	<module>deployment</module>
      	<module>admin</module>
      	<module>core</module>
      	<module>transaction</module>
      	<module>web</module>
      	<module>ejb</module>
      	<module>connectors</module>
      	<module>jdbc</module>
      	<module>persistence</module>
      	<module>extras</module>
	<module>admingui</module>
      	<module>distributions</module>
        <module>security</module>
        <module>registration</module>
        <module>tests</module>
        <module>osgi-platforms</module>
        <module>flashlight</module>
    </modules>
    <repositories>
        <repository>
            <!-- back up glassfish maven repository in case the 'glassfish-repository' goes down -->
            <id>glassfish-repository-wsinterop</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://maven.dyndns.org/glassfish/</url>
	          <snapshots>
			          <updatePolicy>never</updatePolicy>
				    </snapshots>
        </repository>
       <!--
        <repository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://download.java.net/maven/glassfish</url>
	          <snapshots>
			          <updatePolicy>never</updatePolicy>
				    </snapshots>
        </repository>
        -->
        <!-- all the other repositories are inherited -->
    </repositories>

    <build>
        <defaultGoal>install</defaultGoal>
        <sourceDirectory>src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.glassfish.build</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>
                <configuration>
                    <!-- configuration for the checkout mojo -->
                    <checkoutDirectory>.</checkoutDirectory>
                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                    <!-- configuration for the run mojo -->
                    <distribution>
                        <groupId>org.glassfish.distributions</groupId>
                        <artifactId>web</artifactId>
                        <version>${pe.version}</version>
                    </distribution>
                </configuration>
            </plugin>

            <!--  added for temporary testing purpose FelixIssue:661 -->
            <plugin>
               <groupId>org.apache.felix</groupId>
               <artifactId>maven-bundle-plugin</artifactId>
               <version>1.4.3-SNAPSHOT</version>
            </plugin>
 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>none</forkMode>
                </configuration>
            </plugin>
            <!--plugin>
                <!- - configuration for compiling HK2 jars - ->
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <configuration>
                    <processors>
                        <processor>
                            <!- - handle runtime MBean annotations like JSR-255 - ->
                            <groupId>org.glassfish.admin.rt-ann</groupId>
                            <artifactId>apt</artifactId>
                            <version>1.0-SNAPSHOT</version>
                        </processor>
                    </processors>
                </configuration>
            </plugin-->
            <plugin>
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <version>${hk2.plugin.version}</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.glassfish.build</groupId>
                <artifactId>maven-glassfish-extension</artifactId>
                <version>1.0-SNAPSHOT</version>
            </extension>
        </extensions>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.3.1</version>
            <scope>test</scope>
            <optional>true</optional>
      </dependency>
    </dependencies>

    <!--  added for temporary testing purpose FelixIssue:661 -->
    <pluginRepositories>
       <pluginRepository>
           <id>apache-snapshot</id>
           <name>SNAPSHOT Repository for Apache</name>
           <url>http://people.apache.org/repo/m2-snapshot-repository/</url>
           <snapshots>
               <updatePolicy>never</updatePolicy>
           </snapshots>
       </pluginRepository>
   </pluginRepositories>

</project>

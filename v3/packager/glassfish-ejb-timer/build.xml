<project name="glassfish ejb timer package creation" default="create.package" basedir=".">
    <import file="${basedir}/../common-targets.xml"/>

   <target name="create.package">
	   <mkdir dir="target/stage/${install.dir.name}"/>

	<resolveArtifact artifactId="ejb-timer-databases" todir="target/fragments" />

	<unzip dest="target/stage/${install.dir.name}">
                <patternset>
                    <exclude name="META-INF/**"/>
                </patternset>
                <fileset dir="target/fragments" includes="*"/>
        </unzip>


        <if test="${compression}">
	       <antcall target="pack.compression" />
	</if>

       <zip file="target/glassfish-ejb-timer.zip" basedir="target/stage"/>
           
       <attachArtifact file="target/glassfish-ejb-timer.zip"/>
   </target>
</project>


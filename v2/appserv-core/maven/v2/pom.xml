<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sun.enterprise.glassfish</groupId>
    <artifactId>bootstrap</artifactId>
    <packaging>pom</packaging>
    <version>10.0-SNAPSHOT</version>
    <name>GlassFish bootstrap</name>
    <url>http://maven.apache.org</url>
    <scm>
        <connection>scm:cvs:pserver:dochez@cvs.dev.java.net:/cvs:glassfish/${pom.artifactId}</connection>
    </scm>
    <properties>
        <jdk.compiler.version>1.5</jdk.compiler.version>
        <ant.version>1.6.5</ant.version>
        <glassfish.home>${user.dir}/../../publish</glassfish.home>
        <glassfish.version>10.0-SNAPSHOT</glassfish.version>
        <javaee-api.version>5.0</javaee-api.version>
        <activation-api.version>1.1</activation-api.version> 
        <transaction-api.version>1.1</transaction-api.version>
        <mail-api.version>1.4</mail-api.version>        
        <mail.version>1.4.1ea-SNAPSHOT</mail.version>
        <ejb-api.version>3.0</ejb-api.version>
        <persistence-api.version>1.0</persistence-api.version>
        <connector-api.version>1.5</connector-api.version>
        <management-api.version>1.5</management-api.version>
        <jms-api.version>1.5</jms-api.version>
        <security-api.version>1.5</security-api.version>
        <servlet-api.version>2.5</servlet-api.version>
        <jsp-api.version>2.1</jsp-api.version>
        <deployment-api.version>1.5</deployment-api.version>
        <grizzly.version>1.5.1</grizzly.version>
        <jasper-jsr199.version>9.1</jasper-jsr199.version>
        <com.sun.commons.logging.version>1.0.4</com.sun.commons.logging.version>
        <com.sun.commons.modeler.version>1.1</com.sun.commons.modeler.version>
        <com.sun.commons.digester.version>1.5</com.sun.commons.digester.version>
        <com.sun.commons.beanutils.version>1.6.1</com.sun.commons.beanutils.version>        
        <ant.version>1.6.5</ant.version>
    </properties>
    <modules>
        <module>maven-glassfish-plugin</module>
        <module>../activation</module>
        <module>../mail</module>
        <module>../deployment-api</module>
        <module>../transaction-api</module>
        <module>../servlet-api</module>
        <module>../ejb-api</module>
        <module>../persistence-api</module>
        <module>../connector-api</module>
        <module>../management-api</module>
        <module>../jms-api</module>
        <module>../jacc-api</module>
        <module>../common-util</module>
        <module>../annotation-framework</module>
        <module>../appserv-commons</module>
        <!-- <module>../entity-persistence</module>
        <module>../jmx-remote</module> -->
        <module>../admin-core</module>
        <!-- 
        <module>../jts</module> 
        <module>../appserv-jstl</module> 
        <module>../pws-commons</module> 
        -->
        <module>../appserv-webtier</module>
        <!--<module>../appserv-core</module>-->
        <module>package</module>
    </modules> 
    <repositories>
        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>my-m1-repository</id>
            <name>Maven 1.x Repository</name>
            <layout>legacy</layout>            
            <url>http://download.java.net/javaee5/external/shared</url>
        </repository>
        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>my-m1-snapshot-repository</id>
            <name>Maven 1.x Snapshot Repository</name>
            <layout>legacy</layout>            
            <url>http://download.java.net/javaee5/nightly/Darwin</url>
        </repository>        
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.compiler.version}</source>
                    <target>${jdk.compiler.version}</target>
                    <compilerArguments>
                        <extdirs>
                            ${project.build.directory}/dependencies:${project.build.directory}/dependencies/modules
                        </extdirs>                        
                    </compilerArguments> 
                </configuration>
            </plugin>  
            <plugin>
                <groupId>com.sun.enterprise.build</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>
                <inherited>false</inherited>                
                <configuration>
                    <checkoutDirectory>.</checkoutDirectory>                
                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                </configuration>
            </plugin>
        </plugins>
    </build>   
    <profiles>
        <profile>
            <id>glassfish</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>dependency-maven-plugin</artifactId>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>glassfish-image</groupId>
                                            <artifactId>glassfish-image</artifactId>
                                            <version>SNAPSHOT</version>
                                            <type>jar</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${glassfish.home}</outputDirectory>
                                </configuration>
                            </execution>
                        </executions> 
                    </plugin>
                    <plugin>
                        <groupId>com.sun.enterprise.build</groupId>
                        <artifactId>maven-glassfish-plugin</artifactId>   
                        <inherited>false</inherited>        
                        <executions>
                            <execution>
                                <id>unpack200</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>unpack200</goal>
                                </goals>
                                <configuration>
                                    <sourceDirectory>${glassfish.home}/lib</sourceDirectory>
                                    <outputDirectory>${glassfish.home}/lib</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>                     
                </plugins>
            </build>
        </profile>
        <profile>
            <id>glassfish-v3</id> 
        </profile>
    </profiles>
</project>

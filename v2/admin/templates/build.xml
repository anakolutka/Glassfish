<project name="Admin Templates Module" default="all" basedir=".">  
    <property file="../../bootstrap/project.properties"/>
    <property file="./build.properties"/>
    <condition property="windows">
        <os family="windows" />
    </condition>
    <condition property="unix">
        <os family="unix" />
    </condition>
    <condition property="solaris">
        <os name="SunOS"/>
    </condition>
    <condition property="linux">
        <os name="Linux"/>
    </condition>
    <condition property="darwin">
        <os name="Mac OS X"/>
    </condition>

    <xmlcatalog id="domain.xml.entities">
        <dtd publicId="${domain.dtd.public.id}"
             location="${domain.dtd}"/>
    </xmlcatalog>
  
    <!-- all -->
    <target name="all" 
            depends="build"
            description="Build ${component.name}">
    </target>


    <!-- init. Initialization involves creating publishing directories and
         OS specific targets. --> 
    <target name="init" description="${component.name} initialization">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp>    
    </target>


    <target name="build"
            depends="publish-templates,publish-solaris,publish-linux,publish-win,handle-profiles,do-mac-changes"
            description="Builds ${component.name}"/>

    <!-- Generate RI template using xslt transform -->
    <target name="build-templates" 
        depends="init"
        description="Builds template files">
        <java classname="com.sun.enterprise.util.XMLFileTransformer"        
          fork="true" 
          failonerror="true">
        <classpath>
            <pathelement location="${appserv-rt.jar}"/>
        </classpath>
        <arg value="${glassfish.dtds.home}/sun-domain_1_2.dtd"/> 
        <arg value="${templates.dir}/default-domain.xml.template"/> 
        <arg value="${templates.dir}/PEDomain2RIDomain.xsl"/> 
        <arg value="${templates.dir}/ri-domain.xml.template"/> 
        </java>      
        <java classname="com.sun.enterprise.util.XMLFileTransformer"        
          fork="true" 
          failonerror="true">
        <classpath>
            <pathelement location="${appserv-rt.jar}"/>
        </classpath>
        <arg value="${glassfish.dtds.home}/sun-domain_1_2.dtd"/> 
        <arg value="${templates.dir}/default-domain.xml.template"/> 
        <arg value="${templates.dir}/PEDomain2PESamplesDomain.xsl"/> 
        <arg value="${templates.dir}/samples-domain.xml.template"/> 
        </java>      
    </target>
        
    <!-- publish-templates -->
    <target name="publish-templates" 
            depends="init, build-templates"
            description="publish templates">
        <echo message="Start: publish templates->${glassfish.templates.home}"/>
        <copy todir="${glassfish.templates.home}">
            <fileset dir="${templates.dir}">
                <exclude name="default-domain.xml.template.info"/>
                <exclude name="index.html"/>
                <exclude name="README"/>
                <exclude name="killserv"/>
                <exclude name="killserv.bat"/>
            </fileset>
        </copy>

        <copy todir="${glassfish.lib.home}/appclient" overwrite="true">
            <fileset dir="${templates.dir}"
                     includes="client.policy, appclientlogin.conf,wss-client-config-2.0.xml"/>
        </copy>
        <antcall target="publish-killserv"/>
        <echo message="End: publish templates->${glassfish.templates.home}"/>
    </target>

    <target name="publish-killserv" depends="publish-killserv-win,publish-killserv-unix"/>
    <target name="publish-killserv-win" if="windows">
	<copy file="${templates.dir}/killserv.bat" todir="${glassfish.lib.home}" overwrite="true"/>
    </target>

    <target name="publish-killserv-unix" if="unix">
	<copy file="${templates.dir}/killserv" todir="${glassfish.lib.home}" overwrite="true"/>
        <chmod file="${glassfish.lib.home}/killserv" perm="755"/> 
    </target>

    <!--publish-platform-specific templates -->
    <target name="publish-linux" if="linux">
	    <move todir="${glassfish.templates.home}" overwrite="true">
		    <fileset dir="${glassfish.templates.home}">
			    <include name="*.linux"/>
		    </fileset>
		    <mapper type="glob" from="*.linux" to="*"/>
	    </move>
    </target>
    <target name="publish-solaris" if="solaris">
	    <move todir="${glassfish.templates.home}" overwrite="true">
		    <fileset dir="${glassfish.templates.home}">
			    <include name="*.solaris"/>
		    </fileset>
		    <mapper type="glob" from="*.solaris" to="*"/>
	    </move>
    </target>
    <target name="publish-win" if="windows">
	    <move todir="${glassfish.templates.home}" overwrite="true">
		    <fileset dir="${glassfish.templates.home}">
			    <include name="*.win"/>
		    </fileset>
		    <mapper type="glob" from="*.win" to="*"/>
	    </move>
    </target>
    
     <target name="handle-profiles" depends="handle-dev-profile, handle-cluster-profile, handle-ent-profile, do-mac-changes">
    </target>
    <target name="handle-dev-profile">
        <xslt in="${base.xml}"
              out="${dev.xml}"
              style="${dev.xsl}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xslt>
        <xmlvalidate failonerror="yes" warn="true" file="${dev.xml}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xmlvalidate>
    </target>
    <target name="handle-cluster-profile">
        <xslt in="${base.xml}"
              out="${temp.xml}"
              style="${cluster.xsl.0}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xslt>
        <xslt in="${temp.xml}"
              out="${cluster.xml}"
              style="${cluster.xsl.1}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xslt>
        <xmlvalidate failonerror="yes" warn="true" file="${cluster.xml}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xmlvalidate>
    </target>
    <target name="handle-ent-profile">
        <xslt in="${base.xml}"
              out="${temp.xml}"
              style="${ent.xsl.0}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xslt>
        <xslt in="${temp.xml}"
              out="${ent.xml}"
              style="${ent.xsl.1}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xslt>
        <xmlvalidate failonerror="yes" warn="true" file="${ent.xml}">
            <xmlcatalog refid="domain.xml.entities"/>
        </xmlvalidate>
    </target>
    <target name="do-mac-changes" if="darwin">
    <!-- empty for now -->
    </target>
    <!--publish-platform-specific templates -->
    <!-- clean -->
    <target name="clean"/>


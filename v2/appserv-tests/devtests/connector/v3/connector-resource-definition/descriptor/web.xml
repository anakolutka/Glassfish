<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"    
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee web-app_3_1.xsd"   
         version="3.1"
         metadata-complete="false">

    <display-name>connector-resource-definition</display-name>
    <distributable></distributable>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>com.sun.s1asdev.ejb.ejb30.hello.session3.Servlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>

    <connector-resource>
       <description>global-scope resource to be modified by DD</description>
       <name>java:global/env/Servlet_ModByDD_ConnectorResource</name>
       <class-name>javax.resource.cci.ConnectionFactory</class-name>
       <property>
         <name>org.glassfish.connector-connection-pool.transaction-support</name>
         <value>NoTransaction</value>
       </property>
       <property>
         <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
         <value>crd-ra</value>
       </property>
     </connector-resource>

    <connector-resource>
       <description>global-scope resource defined in Web DD</description>
       <name>java:global/env/Web_DD_ConnectorResource</name>
       <class-name>javax.resource.cci.ConnectionFactory</class-name>
       <property>
         <name>org.glassfish.connector-connection-pool.transaction-support</name>
         <value>LocalTransaction</value>
       </property>
       <property>
         <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
         <value>crd-ra</value>
       </property>
     </connector-resource>

    <connector-resource>
       <description>application-scope resource defined in Web DD</description>
       <name>java:app/env/Web_DD_ConnectorResource</name>
       <class-name>javax.resource.cci.ConnectionFactory</class-name>
       <property>
         <name>org.glassfish.connector-connection-pool.transaction-support</name>
         <value>LocalTransaction</value>
       </property>
       <property>
         <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
         <value>crd-ra</value>
       </property>
     </connector-resource>
    
      <connector-resource>
        <description>module-scope resource defined in Web DD</description>
        <name>java:module/env/Web_DD_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>crd-ra</value>
        </property>
      </connector-resource>

</web-app>


<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         metadata-complete="false" version="3.2" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_2.xsd">
  <module-name>connector-resource-definition-ejb</module-name>
  <enterprise-beans>
    <session>
      <display-name>HelloStatefulEJB</display-name>
      <ejb-name>HelloStatefulEJB</ejb-name>
      <business-local>com.sun.s1asdev.ejb.ejb30.hello.session3.HelloStateful</business-local>
      <ejb-class>com.sun.s1asdev.ejb.ejb30.hello.session3.HelloStatefulEJB</ejb-class>
      
      <connector-resource>
        <description>global-scope resource defined in EJB DD</description>
        <name>java:global/env/StatefulEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>module-scope resource defined in EJB DD</description>
        <name>java:module/env/StatefulEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>component-scope resource defined in EJB DD</description>
        <name>java:comp/env/StatefulEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
    </session>
    <session>
      <display-name>HelloEJB</display-name>
      <ejb-name>HelloEJB</ejb-name>
      <business-local>com.sun.s1asdev.ejb.ejb30.hello.session3.Hello</business-local>
      <ejb-class>com.sun.s1asdev.ejb.ejb30.hello.session3.HelloEJB</ejb-class>

      <connector-resource>
        <description>global-scope resource defined in EJB DD</description>
        <name>java:global/env/HelloEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>module-scope resource defined in EJB DD</description>
        <name>java:module/env/HelloEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>component-scope resource defined in EJB DD</description>
        <name>java:comp/env/HelloEJB_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>org.glassfish.connector-connection-pool.transaction-support</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>org.glassfish.connector-connection-pool.resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
    </session>
  </enterprise-beans>
  
</ejb-jar>

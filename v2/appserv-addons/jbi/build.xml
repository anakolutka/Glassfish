<project name="Server Management" default="all" basedir=".">  

<!-- ========== Initialize Properties =================================== -->

    <property file="../../bootstrap/project.properties"/>
    <property file="../addons.properties"/>
    <property file="./build.properties"/>

    <!-- all -->
    <target name="all" depends="compile-jbi, assemble-jbi"
        description="Build entire ${component.name}">
    </target>

    <!-- build -->
    <target name="build" depends="compile-jbi, assemble-jbi"
        description="Build entire ${component.name}">
    </target>

    <!-- init. Initialization involves creating publishing directories and
         OS specific targets. --> 
    <target name="init" description="${component.name} initialization">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp>    
        <mkdir dir="${component.classes.dir}"/>
        <mkdir dir="${component.lib.dir}"/>
        <mkdir dir="${appserv-addons.lib}/jbi"/>
                
        <!-- explode WSDL Shared Library  -->
        <delete dir="${component.classes.dir}/sun-wsdl-library"/>
        <mkdir dir="${component.classes.dir}/sun-wsdl-library"/>
        <unjar src="${glassfish.jbi.home}/shared-libraries/sun-wsdl-library/wsdlsl.jar"
               dest="${component.classes.dir}/sun-wsdl-library"/>
        
    </target>

    <target name="post-bootstrap" depends="init" description="${component.name} bootstrap">
    </target>

    <path id="compile.classpath">
      <pathelement location="${javaee.jar}"/>
      <pathelement location="${jmac-api.jar}"/>
      <pathelement location="${appserv-rt.jar}"/>
      <pathelement location="${webservices-rt.jar}"/>
      <pathelement location="${webservices-tools.jar}"/>
      <pathelement location="${appserv-ext.jar}"/>
      <pathelement location="${appserv-admin.jar}"/>
      <pathelement location="${jbi.home}/lib/jbi.jar"/>
      <pathelement location="${component.classes.dir}/sun-wsdl-library/wsdl2.jar"/>
      <pathelement location="${component.classes.dir}/sun-wsdl-library/wsdl11-wrapper.jar"/>
      <pathelement location="${component.classes.dir}/sun-wsdl-library/wsdl4j.jar"/>      
    </path>

    <!-- compile: compile the sources --> 
    <target name="compile-jbi" depends="init" 
        description="Compile ${component.name} sources">  
        <echo message="Class path is ${appserv-rt.jar} ${appserv-rt.jar}"/>
        <javac srcdir="${src.dir}" 
               destdir="${component.classes.dir}"
               debug="${javac.debug}" 
               optimize="${javac.optimize}"
               source="${javac.source}" 
               deprecation="${javac.deprecation}"
               failonerror="true">
            <classpath>
	      <path refid="compile.classpath"/>
	    </classpath>
            <include name="**/*.java"/>            
        </javac>
    </target>
    
    <!-- assemble: create jar files and jar files containing localized content -->
    <target name="assemble-jbi" depends="compile-jbi, init"
        description="Create ${component.name} jar files">               
        <echo message="Copying from ${src.dir} to ${component.classes.dir}"/>
        <copy todir="${component.classes.dir}">
	  <fileset dir="${src.dir}">
              <include name="**/*.properties"/>
          </fileset>
        </copy>
        <copy file="${src.dir}/com/sun/enterprise/jbi/serviceengine/jbi.xml" 
                tofile="${component.lib.dir}/jbi.xml" overwrite="yes">	
        </copy>

        <jar jarfile="${component.lib.dir}/${component.jar.name}" update="yes">
            <fileset dir="${component.classes.dir}">
                <include name="**/*.class"/>
                <include name="**/*.properties"/>
		<exclude name="jbi.xml"/>
            </fileset>
        </jar>                        

        <jar jarfile="${appserv-jbise.jar}" update="yes" manifest="appserv-jbise.mf">
            <fileset dir="${component.lib.dir}">
                <include name="${component.jar.name}"/>
            </fileset>
           <metainf dir="${component.lib.dir}">
                <include name="jbi.xml"/>
           </metainf>
        </jar>                        

        <!-- explode Java EE SE  -->
        <echo message="Publishing Java EE SE ..."/>
        <antcall target="copy.component.installer">
            <param name="fromarchive" value="${appserv-jbise.jar}"/>
            <param name="name" value="sun-javaee-engine"/>
            <param name="type" value="components"/>
            <param name="archive" value="appserv-jbise"/>
        </antcall>        

    </target>
    
    <target name="copy.component.installer">
        <echo message="Copying Java EE SE installer ${fromarchive}"/>
        <delete dir="${glassfish.jbi.home}/${type}/${name}"/>
        <mkdir dir="${glassfish.jbi.home}/${type}/${name}"/>
        <copy file="${fromarchive}" 
            tofile="${glassfish.jbi.home}/${type}/${name}/${archive}.jar"/>
    </target>    

    <!-- clean -->
    <target name="clean">
        <delete dir="${component.lib.dir}"/>
        <delete dir="${component.classes.dir}"/>
        <delete dir="${appserv-addons.lib}/jbi"/>
    </target>

</project>

<apt:template apt:name="InstallHome" xmlns:apt="http://www.sun.com/jds/apoc/2004/template"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:oor="http://openoffice.org/2001/registry"
  xsi:schemaLocation="http://www.sun.com/jds/apoc/2004/template ../../../consumables/schemas/config/apoc/policytemplate.xsd">
 <apt:category apt:name="InstallHome" apt:label="InstallHome" >

 <apt:page apt:name="Install_page" apt:label="InstallHome" >

  <apt:section apt:name="install" apt:label="DirectorySelection" >
      <apt:property apt:name="INSTALL_TEXT_TOP"
         apt:dataPath=""
         apt:type="xs:string">
         <apt:prop-value></apt:prop-value>
         <apt:visual>
            <apt:htmlPanel/>
         </apt:visual>
        </apt:property>
        <apt:property apt:name="INSTALL_HOME" apt:label="$INSTALL_HOME_LABEL"
         apt:dataPath="directory.INSTALL_HOME"
         apt:type="xs:string">
         <apt:prop-value>$DEFAULT_INSTALL_HOME</apt:prop-value>
         <apt:visual>
            <apt:directorySelector apt:toolTip="$SPECIFY_HOME_MSG"/>
         </apt:visual>
        </apt:property>
        <apt:property apt:name="INSTALL_TEXT_BOTTOM"
         apt:dataPath=""
         apt:type="xs:string">
         <apt:prop-value></apt:prop-value>
         <apt:visual>
            <apt:htmlPanel/>
         </apt:visual>
        </apt:property>
  </apt:section>
  <apt:scriptHandler apt:scriptLanguage="beanshell" >
  <apt:scriptCode><![CDATA[
      run() {
       wizard.enableCancel(true);
        wizard.enableHelp(true);
        wizard.enableBack(true);
        wizard.enableNext(true);


        String installMode = (String)ConfigHelper.getUnconfirmedValue
                            ("InstallType.Option.CONFIGURATION_MODE");
        panelTopText = wizard.getComponentByName((Container)content,"INSTALL_TEXT_TOP");
        panelBottomText = wizard.getComponentByName((Container)content,"INSTALL_TEXT_BOTTOM");
        
        if (installMode.equals("CONFIG_ONLY")) {
            panelTopText.setText((String)Msg.get("CONFIGONLY_TOP_TEXT",null));
            panelBottomText.setText((String)Msg.get("CONFIGONLY_BOTTOM_TEXT",null));
      }
       else {
            panelTopText.setText(Msg.get("INSTALL_TOP_TEXT",null));
            panelBottomText.setText(Msg.get("INSTALL_BOTTOM_TEXT",null));
      }
      }

    return (Runnable)this;
                ]]></apt:scriptCode>

  </apt:scriptHandler>
 </apt:page>
 </apt:category>
</apt:template>

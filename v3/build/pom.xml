<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.glassfish.build</groupId>
    <artifactId>build</artifactId>
    <version>10.0-alpha-3</version>
    <packaging>pom</packaging>
    <name>GlassFish Build Utilities</name>
    <modules>
        <module>maven-glassfish-plugin</module>
        <module>maven-glassfish-extension</module>
    </modules>
    <repositories>
        <repository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://download.java.net/maven/glassfish</url>
        </repository>
        <repository>
            <id>maven2.java.net</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/2</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/glassfish</url>
        </pluginRepository>
        <pluginRepository>
            <id>maven2.java.net</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/2</url>
        </pluginRepository>
    </pluginRepositories>
    <distributionManagement>
        <repository>
            <!-- the ID maps to ~/.m2/settings.xml, so don't change the ID -->
            <!-- switching to back up while the main server is down
            <id>glassfish-repository</id>
            <uniqueVersion>false</uniqueVersion>
            <url>sftp://trx2.sun.com:/export/nfs/dlc/maven/glassfish</url-->

            <id>glassfish-repository-wsinterop</id>
            <uniqueVersion>false</uniqueVersion>
            <url>scp://wsinterop.sun.com:/home/hudson/maven/mirrors/glassfish</url>
        </repository>
    </distributionManagement>
    <scm>
        <connection>scm:svn:https://svn.dev.java.net/svn/glassfish-svn/tags/build-10.0-alpha-3</connection>
        <developerConnection>scm:svn:https://svn.dev.java.net/svn/glassfish-svn/tags/build-10.0-alpha-3</developerConnection>
    </scm>

    <properties>
      <hk2.version>0.3.0</hk2.version>
    </properties>
</project>
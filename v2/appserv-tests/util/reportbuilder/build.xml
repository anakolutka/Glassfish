<project name="Report Utils" default="build">
    <target name="build">
        <delete quiet="true" dir="build"/>
        <mkdir dir="build"/>
        <javac srcdir="src/main/java" destdir="build" debug="on"/>

        <jar destfile="../../lib/reportbuilder.jar" basedir="build"/>
    </target>

    <target name="html" depends="build">
        <java classname="com.sun.appserv.test.util.results.HtmlReportProducer" classpath="build" fork="true">
            <arg line="../../test_resultsValid.xml"/>
        </java>
    </target>
</project>
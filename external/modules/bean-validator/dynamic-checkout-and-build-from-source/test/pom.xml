<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.glassfish</groupId>
  <artifactId>bean-validator-test</artifactId>
  <name>bean-validator-test</name>
  <!-- This must match the version of ../bundle/osgi/pom.xml -->
  <version>3.0-JBoss-4.0.2_02</version> 
  <description>Automated tests for Sun's integration of JBoss's implementation of JSR-303 Bean Validation</description>

  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Repository for Maven</name>
      <url>http://download.java.net/maven/2</url>
    </repository>
    <repository>
      <id>maven-repository.dev.java.net</id>
      <name>Java.net Repository for Maven</name>
      <url>https://maven-repository.dev.java.net/repository</url>
      <layout>legacy</layout>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Maven Repository Switchboard</name>
      <url>http://repo1.maven.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>mavaen2-repository</id>
      <name>Java.net maven2 repository</name>
      <url>http://download.java.net/maven/2/</url>
    </pluginRepository>
    <pluginRepository>
      <id>ocean</id>
      <url>http://maven.ocean.net.au/snapshot</url>
      <releases>
              <enabled>false</enabled>
              <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
              <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

<!-- 

invocation example

mvn -Dglassfish.home=/Users/edburns/Documents/JavaEE/workareas/glassfishv3-target/glassfish -DpasswordFile=/Users/edburns/.javaee-passwordfile glassfish:start-domain

-->

  <build>
    <defaultGoal>test</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.glassfish.maven.plugin</groupId>
        <artifactId>maven-glassfish-plugin</artifactId>
        <version>2.2-SNAPSHOT</version>
        <executions>
          <execution>
            <id>start-server</id>
            <phase>process-test-classes</phase>
	    <configuration>
	      <glassfishDirectory>${glassfish.home}</glassfishDirectory>
	      <user>admin</user>
	      <passwordFile>${passwordFile}</passwordFile>
	      <domain>
		<name>domain1</name>
		<adminPort>4848</adminPort>
		<httpPort>8080</httpPort>
		<reuse>true</reuse>
	      </domain>          
	    </configuration>
	    <goals>
	       <goal>start-domain</goal>
	    </goals>
          </execution>
          <execution>
            <id>stop-server</id>
            <phase>prepare-package</phase>
	    <configuration>
	      <glassfishDirectory>${glassfish.home}</glassfishDirectory>
	      <user>admin</user>
	      <passwordFile>${passwordFile}</passwordFile>
	      <domain>
		<name>domain1</name>
		<adminPort>4848</adminPort>
		<httpPort>8080</httpPort>
		<reuse>true</reuse>
	      </domain>          
	    </configuration>
	    <goals>
	       <goal>stop-domain</goal>
	    </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>move-aside-existing-bv-jar</id>
            <phase>generate-test-sources</phase>
            <configuration>
              <tasks>
                <echo message="Moving aside ${bean-validator.jar} in Glassfish installed at ${glassfish.home}."/>
                <move failonerror="false" overwrite="true"
                      file="${glassfish.home}/modules/${bean-validator.jar}"
                      tofile="${glassfish.home}/${bean-validator-jar-original-name}"/>
                <echo message="Installing  ${new-bean-validator.jar} into Glassfish installed at ${glassfish.home}."/>
                <copy failonerror="false" overwrite="true"
                      file="${new-bean-validator.jar}"
                      tofile="${glassfish.home}/modules/${bean-validator.jar}" />
             </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>restore-existing-bv-jar</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <echo message="Restoring ${glassfish.home}/${bean-validator-jar-original-name} to Glassfish installed at ${glassfish.home}."/>
                <move overwrite="true"
                      file="${glassfish.home}/${bean-validator-jar-original-name}"
                      tofile="${glassfish.home}/modules/${bean-validator.jar}"/>
             </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>install-bean-validator-osgi-module</id>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>net.sourceforge.htmlunit</groupId>
      <artifactId>htmlunit</artifactId>
      <version>2.4</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>javax.xml</groupId>
          <artifactId>jsr173</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <properties>
      <bean-validator-jar-name>bean-validator</bean-validator-jar-name>
      <bean-validator.jar>${bean-validator-jar-name}.jar</bean-validator.jar>
      <bean-validator-jar-original-name>${bean-validator-jar-name}_jar.ORIGINAL</bean-validator-jar-original-name>
      <new-bean-validator.jar>${settings.localRepository}/org/glassfish/bean-validator/${pom.version}/${bean-validator-jar-name}-${pom.version}.jar</new-bean-validator.jar>
  </properties>


</project>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         metadata-complete="false" version="3.2" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_2.xsd">
  <module-name>connector-resource-definition-ejb</module-name>
  
  <enterprise-beans>
    <entity>
      <ejb-name>HelloEntity</ejb-name>
      <ejb-class>SomeClass</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>PrimeKeyClass</prim-key-class>
      <reentrant>true</reentrant>
      <connector-resource>
        <description>global-scope resource defined in EJB DD</description>
        <name>java:global/env/Entity_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>transactionSupport</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>module-scope resource defined in EJB DD</description>
        <name>java:module/env/Entity_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>transactionSupport</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
      
      <connector-resource>
        <description>component-scope resource defined in EJB DD</description>
        <name>java:comp/env/Entity_ConnectorResource</name>
        <class-name>javax.resource.cci.ConnectionFactory</class-name>
        <property>
          <name>transactionSupport</name>
          <value>LocalTransaction</value>
        </property>
        <property>
          <name>resource-adapter-name</name>
          <value>RaApplicationName</value>
        </property>
      </connector-resource>
    </entity>
  </enterprise-beans>
</ejb-jar>

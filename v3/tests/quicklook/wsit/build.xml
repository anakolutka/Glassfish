<project name="GlassFish-V3-wsit-QuickLook" default="all" basedir=".">
    
    <description>Builds, tests, and runs the project V3 WSIT, JAX-WS Quicklook</description>

    <property file="build.properties"/>
    <property file="${tests.root}/build.properties"/>
    <property name="dist.dir" value="${ws.root}/dist/${testsuite.name}"/>

    <import file="${tests.root}/gfproject/build-impl.xml"/>
    <import file="${tests.root}/gfproject/v3-targets.xml"/>
    <import file="path-property-definitions.xml"/>

    <target name="all" depends="clean">
        <record name="allrun.output" action="start"/>
        <antcall target="restart-server"/>
    	<antcall target="build-deploy"/>
        <antcall target="runtests">
            <param name="testng.xml" value="testng.xml"/>
        </antcall>
        <antcall target="undeploy"/>
        <antcall target="stop-server"/>
        <antcall target="testng-summary"/>
        <antcall target="quicklook-summary"/>
        <record name="allrun.output" action="stop"/>
    </target>

    <target name="restart-server">
        <antcall target="stop-server"/>
        <antcall target="start-server"/>
    </target>
  
    <target name="build-deploy">
        <record name="build.output" action="start"/>
        <echo message="ANT PROJECT ${ant.project.name}"/>
        <ant dir="wsitEnabledFromJava" target="server"/>
        <ant dir="wsitEnabledFromJava" target="client"/>
        <ant dir="wsitEnabledFromWsdl" target="server"/>
        <ant dir="wsitEnabledFromWsdl" target="client"/>
        <ant dir="wsitJaxWsFromJava" target="server"/>
        <ant dir="wsitJaxWsFromJava" target="client"/>
        <ant dir="wsitJaxWsFromWsdl" target="server"/>
        <ant dir="wsitJaxWsFromWsdl" target="client"/>
        <record name="build.output" action="stop"/>
    </target>

    <target name="runtests" depends="initprops">
        <record name="runtestng.output" action="start"/>
        <echo message="=============Starting TestNG functional tests from ${testng.xml} ============"/>
        <property name="hasTestNGXML" value="true"/>

        <mkdir dir="${test.report}"/>
        <testng outputdir="${test.report}"
                classpathref="wsit.classpath" classpath="${classes.dir}">
            <jvmarg value="-Djava.compiler=NONE"/>
            <jvmarg value="-Dhttp.host=${glassfish.http.host}"/>
            <jvmarg value="-Dhttp.port=${glassfish.http.port}"/>
            <sysproperty key="basedir" value="${basedir}"/>
            <xmlfileset dir="." includes="${testng.xml}"/>
        </testng>
        <record name="runtestng.output" action="stop"/>
    </target>



    <target name="initprops">
        <property name="build.class.dir" value="${basedir}/classes/test"/>
        <!-- property name="test.report" value="${basedir}/test-output"/ -->
        <property name="test.report" value="${tests.root}/test-output"/>
        <mkdir dir="${test.report}"/>
        <path id="run.testng.classpath">
            <fileset dir="${glassfish.home}/modules">
               <include name="**/*.jar"/>
            </fileset>
	    <pathelement path="${plugin_classpath}"/>
            <pathelement location="${build.class.dir}"/>
        </path>
    </target>
    
    <target name="undeploy">
        <record name="undeploy.output" action="start"/>
        <ant dir="wsitEnabledFromJava" target="undeploy"/>
        <ant dir="wsitEnabledFromWsdl" target="undeploy"/>
        <ant dir="wsitJaxWsFromJava" target="undeploy"/>
        <ant dir="wsitJaxWsFromWsdl" target="undeploy"/>
        <record name="undeploy.output" action="stop"/>
    </target>

    
    <target name="testng-summary">
	<loadfile srcfile="runtestng.output" property="testng_output">
	   <filterchain>
	      <tailfilter lines="6"/>
	   </filterchain>
	</loadfile>
        <echo message="${testng_output}"/>
    </target>

    <target name="quicklook-summary">
        <tstamp>
           <format property="end.timestamp" pattern="EE MM/dd/yyyy HH:mm:ss zz" />
        </tstamp>
        <echo file="quicklook_summary.txt" message="   ${end.timestamp} ${line.separator}" />
        <loadfile srcfile="runtestng.output" property="testng_output">
           <filterchain>
              <tailfilter lines="4" skip="1"/>
           </filterchain>
        </loadfile>
        <echo file="quicklook_summary.txt" append="true" message="${testng_output}"/>
    </target>
   
</project>

<project name="Admin EE Templates Module" default="all" basedir=".">  

<!-- ========== Initialize Properties =================================== -->

    <property file="${glassfish.maven}/project.properties"/>
    <property file="${glassfish.maven}/glassfish.properties"/>
    <property file="./build.properties"/>
    <condition property="darwin">
        <os name="Mac OS X"/>
    </condition>
  
    <!-- all -->
    <target name="all" 
            depends="build"
            description="Build ${component.name}">
    </target>


    <!-- init. Initialization involves creating publishing directories and
         OS specific targets. --> 
    <target name="init" description="${component.name} initialization">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp>    
<condition property="solaris">
        <equals arg1="${os.name}" arg2="SunOS"/>
    </condition>
    <condition property="linux">
        <equals arg1="${os.name}" arg2="Linux"/>
    </condition>
    </target>

    <!-- build target -->
    <target name="build"
            depends="publish-templates"
            description="Builds ${component.name}"/>

    <!-- Generate RI template using xslt transform -->
    <target name="build-templates" 
        depends="init"
        description="Builds template files">
        
        <java classname="com.sun.enterprise.admin.util.XMLAlterUtil"        
          fork="true" 
          failonerror="true">
        <classpath>
            <pathelement location="${appserv-admin.jar}"/>
        </classpath>
        <arg value="${glassfish.templates.home}/default-domain.xml.template"/> 
        <arg value="${glassfish.dtds.home}/sun-domain_1_2.dtd"/> 
        <arg value="${templates.dir}/changePEDomain2SEDomain.xml"/> 
        <arg value="${templates.dir}/default-domain.xml.template"/> 
        </java>        
    </target>

    <!-- Generate MAC template for default-config using xslt transform -->
    <target name="build-templates-default-config-mac" if="darwin"
        depends="init"
        description="Builds darwin template files">
        
        <java classname="com.sun.enterprise.admin.util.XMLAlterUtil"        
          fork="true" 
          failonerror="true">
        <classpath>
            <pathelement location="${appserv-admin.jar}"/>
        </classpath>
        <arg value="${templates.dir}/default-config.xml"/> 
        <arg value="${glassfish.dtds.home}/sun-domain_1_2.dtd"/> 
        <arg value="${templates.dir}/changeMacDefaultConfig.xml"/> 
        <arg value="${templates.dir}/default-config.xml"/> 
        </java>        
    </target>


    <!-- publish-templates -->
    <target name="publish-templates" 
            depends="init, build-templates-default-config-mac, build-templates"
            description="publish templates">
        <echo message="Start: publish templates->${glassfish.templates_ee.home}"/>

        <mkdir dir="${glassfish.templates_ee.home}"/>

        <!-- publish EE templates. First copy PE templates, then overlay
        with EE templates. -->

        <copy todir="${glassfish.templates_ee.home}">
            <fileset dir="${glassfish.templates.home}">
		<include name="*"/>
            </fileset>
        </copy>

        <copy todir="${glassfish.templates_ee.home}" overwrite="true">
            <fileset dir="${templates.dir}">
                <exclude name="default-domain.xml.template.info"/>
                <exclude name="README"/>
            </fileset>
        </copy>

<copy todir="${glassfish.templates_ee.home}" overwrite="true">
            <fileset dir="${com.sun.cmm.as.xml.dir}">
                <include name="*.xml"/>
            </fileset>
        </copy>
        <echo message="End: publish templates->${glassfish.templates_ee.home}"/>
    </target>

    <!-- clean -->
    <target name="clean"/>

</project>

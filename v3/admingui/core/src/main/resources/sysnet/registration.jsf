                    <sun:property id="pswd2Prop" visible="#{false}"  style="margin-left: 17pt" labelAlign="left" noWrap="#{false}" overlapLabel="#{false}" label="$resource{i18n.reg.retypePswd}"  helpText="$resource{i18n.reg.pswdHelp}" >                           

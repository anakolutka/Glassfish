<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>Ejb1</display-name>
  <enterprise-beans>
    <session>
      <display-name>FooBean</display-name>
      <ejb-name>FooBean</ejb-name>
      <home>com.sun.s1asdev.ejb.txprop.simple.FooHome</home>
      <remote>com.sun.s1asdev.ejb.txprop.simple.Foo</remote>
      <ejb-class>com.sun.s1asdev.ejb.txprop.simple.FooBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Bean</transaction-type>
      <ejb-ref>
        <ejb-ref-name>ejb/hello</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.sun.s1asdev.ejb.txprop.simple.HelloHome</home>
        <remote>com.sun.s1asdev.ejb.txprop.simple.Hello</remote>
      </ejb-ref>
      <security-identity>
        <use-caller-identity/>
      </security-identity>
    </session>
    <session>
      <display-name>HelloBean</display-name>
      <ejb-name>HelloBean</ejb-name>
      <home>com.sun.s1asdev.ejb.txprop.simple.HelloHome</home>
      <remote>com.sun.s1asdev.ejb.txprop.simple.Hello</remote>
      <ejb-class>com.sun.s1asdev.ejb.txprop.simple.HelloBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <security-identity>
        <use-caller-identity/>
      </security-identity>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>HelloBean</ejb-name>
        <method-intf>Remote</method-intf>
        <method-name>sayHello</method-name>
      </method>
      <trans-attribute>Mandatory</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>

<project name="Admin EE DTDS Module" default="all" basedir=".">  

<!-- ========== Initialize Properties =================================== -->

    <property file="${glassfish.maven}/project.properties"/>
    <property file="${glassfish.maven}/glassfish.properties"/>
    <property file="./build.properties"/>
    
    <!-- all -->
    <target name="all" 
            depends="build"
            description="Build ${component.name}">
    </target>


    <!-- init. Initialization involves creating publishing directories and
         OS specific targets. --> 
    <target name="init" description="${component.name} initialization">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp>    
        <mkdir dir="${component.classes.dir}"/>
    </target>

    <!-- build target -->
    <target name="build" depends="build-mbean-descriptors, assemble"
            description="Builds ${component.name}"/>

    <!-- Generate RI template using xslt transform -->
    <target name="build-mbean-descriptors" 
        depends="init"
        description="Builds mbean descriptor files">
        <java classname="com.sun.enterprise.admin.util.XMLAlterUtil"        
          fork="true" 
          failonerror="true">
            <classpath>
                <!-- pathelement location="${admin-core-util.jar}"/ -->
                <pathelement location="${appserv-admin.jar}"/>
            </classpath>
            <!-- DP:Added workaround to copy xml,dtd files as its not present in server image -->
            <arg value="${glassfish.maven}/../admin-core/admin/dtds/admin-mbeans-descriptors.xml"/> 
            <arg value="${glassfish.maven}/../admin-core/admin/dtds/mbeans-descriptors.dtd"/> 
            <arg value="${dtds.dir}/change-admin-mbeans-descriptors.xml"/> 
            <arg value="${dtds.dir}/admin-mbeans-descriptors-ee.xml"/> 
        </java>

        <java classname="com.sun.enterprise.admin.util.XMLAlterUtil"        
          fork="true" 
          failonerror="true">
            <classpath>
                <!-- pathelement location="${admin-core-util.jar}"/ -->
                <pathelement location="${appserv-admin.jar}"/>
            </classpath>
            <arg value="${glassfish.maven}/../admin-core/admin/dtds/runtime-mbeans-descriptors.xml"/> 
            <arg value="${glassfish.maven}/../admin-core/admin/dtds/mbeans-descriptors.dtd"/> 
            <arg value="${dtds.dir}/change-runtime-mbeans-descriptors.xml"/> 
            <arg value="${dtds.dir}/runtime-mbeans-descriptors-ee.xml"/> 
        </java>  
    </target>

 
    <!-- assemble: create jar files and jar files containing localized
    content -->
    <target name="assemble" depends="init"
        description="Create ${component.name} jar files">

        <copy todir="${component.classes.dir}" flatten="true">
            <fileset dir="${dtds.dir}">
                <include name="**/admin-mbeans-descriptors-ee.xml"/>
                <include name="**/runtime-mbeans-descriptors-ee.xml"/>
	        </fileset>
        </copy>

        <copy todir="${component.classes.dir}" flatten="true">
            <fileset dir="${glassfish.maven}/../admin-core/admin/dtds">
                <include name="**/mbeans-descriptors.dtd"/>
	        </fileset>
        </copy>

        <jar jarfile="${appserv-se.jar}" update="yes">
            <fileset dir="${component.classes.dir}">
                <include name="**/*.class"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
                <include name="**/*.dtd"/>
            </fileset>
        </jar>
    </target>

    
    <!-- clean -->
    <target name="clean">
        <delete dir="${component.classes.dir}"/>
    </target>

</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>bootstrap</artifactId>
        <groupId>com.sun.enterprise.glassfish</groupId>
        <version>10.0-SNAPSHOT</version>
        <relativePath>../../../bootstrap/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>v3-web</artifactId>
    <packaging>hk2-jar</packaging>
    <name>Appserver Web Container Enablement</name>
    <description>Glassfish Web Container Enablement</description>

    <developers>
        <developer>
            <id>jluehe</id>
            <name>Jan Luehe</name>
            <url>http://blogs.sun.com/jluehe</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>lead</role>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>jfarcand</id>
            <name>Jean Francois Arcand</name>
            <url>http://weblogs.java.net/blog/jfarcand/</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>     
    <build>
        <sourceDirectory>../../src/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>com/sun/appserv/server/util/ASClassLoaderUtil.java</include>
                        <include>com/sun/enterprise/web/**</include>
                        <include>com/sun/enterprise/admin/event/**</include>
                        <include>com/sun/enterprise/admin/common/**</include>
                        <include>com/sun/enterprise/admin/util/**</include>
                        <include>com/sun/enterprise/server/pluggable/WebContainerFeatureFactory.java</include>
                        <include>com/sun/enterprise/admin/util/HostAndPort.java</include>
                        <include>com/sun/appserv/server/ServerLifecycleException.java</include>
                        <include>com/sun/enterprise/security/CipherInfo.java</include>
                        <include>com/sun/enterprise/loader/InstrumentableClassLoader.java</include>
                        <include>com/sun/enterprise/server/PersistenceUnitLoader*.java</include>
                        <include>com/sun/enterprise/server/PersistenceUnitInfoImpl.java</include>
                        <include>com/sun/enterprise/server/Constants.java</include>
                        <include>com/sun/appserv/server/util/Version.java</include>
                    </includes>
                    <excludes>
                       <!-- <exclude>com/sun/enterprise/web/PEWebContainerAdminEventProcessor.java</exclude>    -->
                        <exclude>com/sun/enterprise/web/PersistenceStrategyBuilderFactory.java</exclude>
                        <exclude>com/sun/enterprise/web/EEWebContainerAdminEventProcessor.java</exclude>
                        <exclude>com/sun/enterprise/web/WebContainerLifecycle.java</exclude>
                        <exclude>com/sun/enterprise/web/ServerConfigLookup.java</exclude>
                        <exclude>com/sun/enterprise/web/SessionManagerConfigurationHelper.java</exclude>
                        <exclude>com/sun/enterprise/web/PEWebContainerLifecycle.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/AdminEventMulticaster.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/DependencyResolver.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/AdminEventCache.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/ElementChangeHelper.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/pluggable/PERestartEventHelper.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/DeployEventListenerHelper.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/PEDeployEventListenerHelper.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/RRPersistenceHelper.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/WebConfigChangeEventListener.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/PEEventDispatcher.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/pluggable/PENotificationFactory.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/EventBuilder.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/ElementChangeEventsFactory.java</exclude>
                        <exclude>com/sun/enterprise/web/jsp/ResourceInjectorImpl.java</exclude>
                        <exclude>com/sun/enterprise/admin/common/JMXFileTransfer.java</exclude>
                        <exclude>com/sun/enterprise/web/ConnectionShutdownUtil.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/AdminEventMulticaster.java</exclude>
                        <exclude>com/sun/enterprise/admin/event/AdminEventListenerRegistry.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>config-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>glassfish</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>webtier</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>grizzly-http</artifactId>
            <version>${grizzly.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>commons</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>dol</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>monitoring-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>v3-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>pwc</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.enterprise.glassfish</groupId>
            <artifactId>webtier-extensions</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.commons</groupId>
            <artifactId>digester</artifactId>
            <version>${com.sun.commons.digester.version}</version>
        </dependency>
    </dependencies>
</project>

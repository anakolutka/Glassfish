            Listing of API versions that we depend on among JavaEE APIs.

            Please do not use these values in your POM <version> declaration under <project>.
            These should only be used within <dependency>s.

            For discussions about this restriction, see
            http://www.nabble.com/-Fwd%3A-Re%3A--blocking--Comet-integration--tt15815619.html
            for more details.
        ]]></description>

        <activation-api.version>1.1.2-SNAPSHOT</activation-api.version>
        <transaction-api.version>1.1.1-SNAPSHOT</transaction-api.version>
        <mail-api.version>1.4</mail-api.version>
        <!-- Who uses mail-api.version? -->
        <mail.version>1.4.1-ea-SNAPSHOT</mail.version>
        <ejb-api.version>3.0.1-SNAPSHOT</ejb-api.version>
        <persistence-api.version>1.0.3-SNAPSHOT</persistence-api.version>
        <connector-api.version>1.5.1-SNAPSHOT</connector-api.version>
        <management-api.version>1.1.1-SNAPSHOT</management-api.version>
        <jms-api.version>1.1.1-SNAPSHOT</jms-api.version>
        <security-api.version>1.1.1-SNAPSHOT</security-api.version>
        <servlet-api.version>3.0-SNAPSHOT</servlet-api.version>
        <jsp-api.version>2.1.1-SNAPSHOT</jsp-api.version>
        <jstl-api.version>1.2.1-SNAPSHOT</jstl-api.version>
        <jsf-api.version>1.2_08</jsf-api.version>
        <deployment-api.version>1.2.1-SNAPSHOT</deployment-api.version>
        <jaxrpc-api.version>1.1</jaxrpc-api.version>
        <jaxb-api.version>2.1</jaxb-api.version>
        <jaxws-api.version>2.1</jaxws-api.version>
        <jsr250-api.version>1.0</jsr250-api.version>
        <jsr181-api.version>1.0-MR1</jsr181-api.version>
        <saaj-api.version>1.3</saaj-api.version>
        <!--jsr223-api.version>1.0</jsr223-api.version-->
        <jmac-api.version>1.0.1-SNAPSHOT</jmac-api.version>
        <!--jaxws-ri.version>2.1.3</jaxws-ri.version-->

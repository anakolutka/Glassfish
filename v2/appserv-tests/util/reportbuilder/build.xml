<project name="Report Utils" default="build">
    <property name="builder.jar" value="../../lib/reportbuilder.jar"/>
    <target name="build">
        <delete quiet="true" dir="build"/>
        <mkdir dir="build"/>
        <javac srcdir="src/main/java" destdir="build" debug="on"/>

        <jar destfile="${builder.jar}">
            <fileset dir="build"/>
            <fileset dir="src/main/resources"/>
        </jar>
    </target>

    <target name="html" depends="build">
        <java classname="com.sun.appserv.test.util.results.HtmlReportProducer" classpath="${builder.jar}"
              fork="true">
            <arg line="../../test_resultsValid.xml"/>
        </java>
    </target>
</project>